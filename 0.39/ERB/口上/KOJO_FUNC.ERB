;=================================================
;   sub C_FIRSTTIME_遭遇
;=================================================
;   CHK:初回(口上-遭遇)
;-------------------------------------------------
; Input:
;  ARG					チェック値
; Output:
;  RETURNF				真偽値(0:更新済み 1:初回)
;-------------------------------------------------
@C_FIRSTTIME_遭遇(ARG)
#FUNCTION
#DIM L_VAL
#DIMS L_KEY

L_KEY	= 口上初回遭遇進行度
L_VAL	= ARG

;- 登録済みの場合
IF CFLAG:L_KEY >= L_VAL
	RETURNF 0
ELSE
	CFLAG:L_KEY = L_VAL
	RETURNF 1
ENDIF


;=================================================
;   sub C_FIRSTTIME_COM
;=================================================
;   CHK:初回(口上-コマンド)
;-------------------------------------------------
; Input:
;  ARG:0				チェック値
; Output:
;  RETURNF				真偽値( 0:登録済み 1:未登録(初回) )
;-------------------------------------------------
@C_FIRSTTIME_COM(ARG:0 = -1)
#FUNCTION
#DIM L_VAL
#DIM L_T
#DIMS L_KEY

L_VAL	= (ARG:0 < 0) ? SELECTCOM # ARG:0
L_T		= TARGET
L_KEY	= FIRSTTIME_コマンド

;- CHK:初回
RETURNF C_FIRSTTIME(L_T, L_VAL, L_KEY)

