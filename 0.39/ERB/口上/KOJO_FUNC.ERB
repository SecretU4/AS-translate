;=================================================
;   sub KOJO_DEFAULT
;=================================================
;   口上:汎用
;-------------------------------------------------
; Input:
;  ARGS					処理
;  ARG					タイプ
;-------------------------------------------------
@KOJO_DEFAULT(ARGS, ARG = 0)
#DIMS L_KEY
#DIM L_INPUT
#DIM L_TYPE

VARSET L_KEY
VARSET L_INPUT
VARSET L_TYPE

SELECTCASE ARGS
	;遭遇時
	CASE "ENCOUNTER"
		;ＮＴＲ時
		IF TALENT:ＮＴＲ度
			L_KEY = NTR_ENCOUNTER
		ELSE
			L_KEY = ENCOUNTER
		ENDIF
		L_INPUT = 1
	;行動部
	CASE "ACTION"
		;ＮＴＲ時
		IF TALENT:ＮＴＲ度
			L_KEY = NTR_ACTION
		ELSE
			L_KEY = ACTION
		ENDIF
	;処女喪失時
	CASE "LOST_VIRGIN"
		L_KEY = LOST_VIRGIN
		L_INPUT = 1
	;絶頂した時
	CASE "_ORGASM"
		L_KEY = ORGASM
	;絶頂させた時
	CASE "ORGASM_M"
		L_KEY = ORGASM_M
	;日常イベント
	CASE "DAILY"
		L_KEY = DAILY
	;労役イベント
	CASE "WORK"
		L_KEY = WORK
	;ＮＴＲイベント
	CASE "NTR"
		L_KEY = NTR

	;その他
	CASEELSE
		;スルー
		RETURN
ENDSELECT

;タイプ判定
IF VAR_SEX(TARGET)
	;女
	L_TYPE = 1
ELSE
	;男
	L_TYPE = 20
ENDIF

;汎用口上使用チェック
SIF GETBIT(FLAG:汎用口上制御, L_TYPE)
	RETURN


;インプット
IF L_INPUT
	;有り
	TRYCALLFORM KOJO_DEFAULT_%L_KEY%_K{L_TYPE}(ARG)
ELSE
	;無し
	TRYCALLFORM KOJO_DEFAULT_%L_KEY%_K{L_TYPE}
ENDIF



