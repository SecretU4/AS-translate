
;-------------------------------------------------
; 都市関連
;-------------------------------------------------

@CITY_MAP


PRINTFORM 【天気:
IF Flag:都市_天気 == 0
	PRINTFORM 晴れ
ELSEIF Flag:都市_天気 == 1
	PRINTFORM 曇り
ELSEIF Flag:都市_天気 == 2
	PRINTFORM 雨
ELSEIF Flag:都市_天気 == 3
	PRINTFORM 大雨
ELSEIF Flag:都市_天気 == 4
	PRINTFORM 雪
ENDIF

PRINTFORM 】


IF Flag:都市_Lv >= 5 &&  Flag:都市_防衛 != 0
	SETCOLOR 250,50,50
	SETBGCOLOR 90,10,10
	PRINTFORM 【防衛期間残り:{Flag:都市_防衛}日】 【合計ダメージ: 現在{Flag:都市_防衛蓄積ダメージ}蓄積 / 目標{Flag:都市_防衛成功ダメージ}到達】
ELSEIF Flag:都市_Lv >= 5 &&  Flag:都市_襲撃 <= 3
	SETCOLOR 250,50,50
	PRINTFORM 【襲撃まで:{Flag:都市_襲撃}日】
ELSEIF Flag:都市_Lv >= 5 &&  Flag:都市_襲撃 <= 9
	SETCOLOR 250,50,250
	PRINTFORM 【襲撃まで:{Flag:都市_襲撃}日】
ELSEIF Flag:都市_Lv >= 5 && Flag:都市_襲撃 >= 10
	SETCOLOR 50,250,250
	PRINTFORM 【襲撃まで:{Flag:都市_襲撃}日】
ELSE
	PRINTFORM 
ENDIF


IF Flag:都市_Lv >= 5 && Flag:都市_防衛損壊率 >= 75
	SETCOLOR 250,50,50
ELSEIF Flag:都市_Lv >= 5 && Flag:都市_防衛損壊率 >= 50
	SETCOLOR 250,50,250
ELSEIF Flag:都市_Lv >= 5 && Flag:都市_防衛損壊率 < 50
	SETCOLOR 50,250,250
ELSE
ENDIF
PRINTFORML 【損壊率:{Flag:都市_防衛損壊率}％】

RESETCOLOR
PRINTFORM 【都市Lv:{Flag:都市_Lv, 3 ,RIGHT}({Flag:都市_経験値}/{Flag:都市_Lv*10})】
PRINTFORM 【表社会:{Flag:都市_表社会}】
PRINTFORM 【裏社会:{Flag:都市_裏社会}】
PRINTFORM 【合計ファン数：{FLAG:都市_合計ファン数}】
IF  Flag:都市_今期の締め切り < 10
	SETCOLOR 250,50,50
ELSEIF  Flag:都市_今期の締め切り < 30
	SETCOLOR 250,50,250
ELSEIF  Flag:都市_今期の締め切り >= 30
	SETCOLOR 50,250,250
ELSE
ENDIF
PRINTFORML 【決算まで:{Flag:都市_今期の締め切り}日】
RESETCOLOR
PRINTFORM 【資金:{MONEY}】
PRINTFORM 【TP:{Flag:都市_現在TP, 3 ,RIGHT}/{Flag:都市_最大TP, 3 ,RIGHT}】
PRINTFORM 【AP:{Flag:都市_現在AP, 3 ,RIGHT}/{Flag:都市_最大AP, 3 ,RIGHT}】
PRINTFORM 【SP:{Flag:都市_現在SP, 3 ,RIGHT}/{Flag:都市_最大SP, 3 ,RIGHT}】
PRINTFORM 【KP:{Flag:都市_現在KP, 3 ,RIGHT}/{Flag:都市_最大KP, 3 ,LEFT}】
PRINTFORM 【BP:{Flag:都市_現在BP, 3 ,RIGHT}】
PRINTFORML
PRINTFORML 【功績:{Flag:都市_功績, 10 ,RIGHT}】

DRAWLINE














