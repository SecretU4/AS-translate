;-------------------------------------------------
;アーティファクト
;-------------------------------------------------
@RPG_ARTIFACT(PAGE = 0)
#DIM       PAGE          ;現在参照中のページ
#DIM CONST PAGE_NUM = 30 ;ページ内のアーティファクトの数
#DIM       ART_EQUIP     ;装備対象スロット
#DIM       ART_ID        ;アーティファクトのID
#DIM       L_INPUT       ;RESULT分岐用
CLEARLINE LINECOUNT
DRAWLINE
FOR ART_ID, 1 + PAGE * PAGE_NUM, 1 + (PAGE + 1) * PAGE_NUM
	CALL SHOW_ARTIFACT_DATA_SIMPLE(ART_ID)
NEXT
DRAWLINE

IF PAGE <= 0
	PRINTFORM 　　　　　　
ELSE
	PRINTBUTTON "[100] 前へ", 100
	PRINTFORM 　
ENDIF
IF PAGE >= 3
	PRINTFORM 　　　　　　
ELSE
	PRINTBUTTON "[150] 次へ", 150
	PRINTFORM 　
ENDIF
PRINTFORM 　[300] 整理　
SIF Flag:遺物_連続消去 == 1
	SETCOLOR 100,250,250
PRINTFORM 　[400] 連続消去　
RESETCOLOR
PRINTFORM 　[500] ソート　
PRINTFORM 　[600] 非装備AF一括消去　　
PRINTFORML [999] 戻る
INPUT
L_INPUT = RESULT
SELECTCASE L_INPUT
CASE 100
	PAGE = LIMIT(PAGE - 1, 0, 2)
CASE 150
	PAGE = LIMIT(PAGE + 1, 0, 2)
CASE 300
	CALL RPG_ARTIFACT_KILL_BLANK
CASE 400
	Flag:遺物_連続消去 = !Flag:遺物_連続消去
CASE 500
	CALL RPG_ARTIFACT_SORT
CASE 600
		CLEARLINE LINECOUNT
		PRINTFORML 現在装備中でないAFを全て消去しますか？
		PRINTFORML 
		PRINTFORM [100] はい　
		PRINTFORML [999] いいえ
		INPUT
		L_INPUT = RESULT
		SELECTCASE L_INPUT
		CASE 100
			CALL RPG_ARTIFACT_ALL_DELETE
			PRINTFORML 
			PRINTFORMW 消去しました
		CASE 999
			RESTART
		ENDSELECT
	
CASE 999
	Flag:遺物_連続消去 = 0
	CALL RPG_ARTIFACT_KILL_BLANK
	JUMP RPG_MAIN
CASEELSE
	ART_ID = L_INPUT
	SIF !INRANGE(ART_ID, 1, 90)
		RESTART
	SIF Flag:(15000 + ART_ID) == 0
		RESTART
	IF Flag:遺物_連続消去 == 1
		SIF Flag:(15300 + ART_ID) == 0
			CALL RPG_ARTIFACT_DELETE(ART_ID)
		RESTART
	ENDIF
	CLEARLINE LINECOUNT
	DRAWLINE
	CALL SHOW_ARTIFACT_DATA(ART_ID)
	DRAWLINE
	PRINTFORML 
	PRINTFORM [100] 装備　
	PRINTFORM [150] 消去　
	PRINTFORML [999] 戻る
	INPUT
	L_INPUT = RESULT
	SELECTCASE L_INPUT
	CASE 100
		IF Flag:(15300 + ART_ID) != 0
			ART_EQUIP = FINDELEMENT(FLAG, ART_ID, 15901, 15906)
			PRINTFORML 【%SaveStr:(5000 + ART_ID)%】をスロット{ART_EQUIP - 15900}から外しますか？
			PRINTFORM [100] はい　
			PRINTFORML [999] いいえ
			INPUT
			SELECTCASE RESULT
			CASE 100
				PRINTFORML 【%SaveStr:(5000 + ART_ID)%】の装備を解除しました
				Flag:ART_EQUIP = 0
				Flag:(15300 + ART_ID) = 0
			CASE 999
			ENDSELECT
			RESTART
		ENDIF
		DO
			CLEARLINE LINECOUNT
			FOR ART_EQUIP, 1, 6
				IF Flag:(15900 + ART_EQUIP) == 0
					PRINTFORML [{ART_EQUIP}] 【スロット{ART_EQUIP}】＝未装備＝
				ELSE
					PRINTFORML [{ART_EQUIP}] 【スロット{ART_EQUIP}】【%SaveStr:(5000+(Flag:(15900 + ART_EQUIP)))%】が装備されています
				ENDIF
			NEXT
			PRINTFORML [999] 戻る
			INPUT
			ART_EQUIP = RESULT
			SELECTCASE ART_EQUIP
			CASE 999
			CASEELSE
				SIF !INRANGE(ART_EQUIP, 1, 5)
					CONTINUE
				Flag:(15300 + (Flag:(15900 + ART_EQUIP))) = 0
				Flag:(15900 + ART_EQUIP) = ART_ID
				Flag:(15300 + ART_ID) = 1
				PRINTFORMW スロット{ART_EQUIP}に%SaveStr:(5000 + ART_ID)%を装備しました
			ENDSELECT
			BREAK
		LOOP 1
	CASE 150
		IF Flag:(15300 + ART_ID) != 0
			PRINTFORML 
			PRINTFORMW 装備中の為、消去できません。
			RESTART
		ENDIF
		CLEARLINE LINECOUNT
		PRINTFORML 本当に消去してよろしいですか？
		PRINTFORML 
		PRINTFORM [100] はい　
		PRINTFORML [999] いいえ
		INPUT
		L_INPUT = RESULT
		SELECTCASE L_INPUT
		CASE 100
			CALL RPG_ARTIFACT_DELETE(ART_ID)
			PRINTFORML 
			PRINTFORMW 消去しました
		CASE 999
			RESTART
		ENDSELECT
	CASE 999
		RESTART
	ENDSELECT
	DRAWLINE
ENDSELECT
RESTART



