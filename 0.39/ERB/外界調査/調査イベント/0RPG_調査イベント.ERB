;-------------------------------------------------
;調査イベント
;-------------------------------------------------
@RPG_EVENT_MAIN(ARG)
#DIM L_INPUT
#DIM L_I
#DIM L_I2

L_I2 = TARGET
ARG = Flag:調査キャラ
TARGET = ARG
L_I = ARG

IF RAND:100 > 97
	IF !RAND:5 && Flag:調査イベント発生中 == 0 && Flag:調査区域 >= 1 && Flag:調査深度 >= 30 
		;傷ついた鳥人
		CALL RPG_EVENT_500
	ELSEIF !RAND:4 && Flag:調査イベント発生中 == 0 && Flag:調査区域 >= 3 && Flag:調査深度 >= 50 
		;鬼との出会い
		CALL RPG_EVENT_501
	ELSEIF !RAND:3 && Flag:調査イベント発生中 == 0 && Flag:調査区域 >= 2 && Flag:調査深度 >= 70 
		;冷凍カプセル
		CALL RPG_EVENT_400
	ELSEIF !RAND:2 && Flag:調査イベント発生中 == 0 && CFLAG:L_I:特別保護 == 0 && Flag:イベント誘拐中 == 0 && CFlag:L_I:住人_カルマ >= 40 
		;拉致
		CALL RPG_EVENT_800
	ELSE
	ENDIF
ENDIF

;アイテム入手イベント
IF RAND:100 > (95-((FLAG:支援_後方合計HIT+FLAG:支援_後方合計SPD)/8))
	IF !RAND:3 && Flag:調査イベント発生中 == 0 && Flag:調査区域 >= 1 && Flag:調査深度 >= 20 
		;古代遺物発見
		CALL RPG_EVENT_102
	ELSEIF !RAND:2 && Flag:調査イベント発生中 == 0 && Flag:調査区域 >= 1 && Flag:調査深度 >= 20 && CFLAG:L_I:住人_技能_解読 > RAND:100
		;書物閲覧
		CALL RPG_EVENT_101
	ELSEIF  Flag:調査イベント発生中 == 0 && Flag:調査区域 == 5 && Flag:調査深度 >= 20 && RAND:100 > 20
		;蜘蛛の巣調査
		CALL RPG_EVENT_150
	ELSEIF  Flag:調査イベント発生中 == 0 && Flag:調査区域 >= 1 && Flag:調査深度 >= 50 && CFLAG:L_I:住人_技能_鍵開け > RAND:100
		;ゲノム入手
		CALL RPG_EVENT_100
	ENDIF
ENDIF


CALL TURN_EVENT_HNYU
CALL RPG_EVENT_MAIN_END


TARGET = L_I2


;-------------------------------------------------
;調査イベント 終わり処理
;-------------------------------------------------
@RPG_EVENT_MAIN_END(ARG)
#DIM L_INPUT
#DIM L_I





Flag:調査イベント発生中 = 0
Flag:調査イベント番号 = 0




