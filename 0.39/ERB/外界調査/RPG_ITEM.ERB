@RPG_ITEM
#DIM L_INPUT
#DIM L_LOOP
#DIM L_LOOP2

L_LOOP2 = 0
L_LOOP = 0
CLEARLINE LINECOUNT
DRAWLINE
REPEAT 900
	IF L_LOOP == 0
		PRINTFORML 【――――――――――――――――――素　材――――――――――――――――――】
		L_LOOP2  = 0
	ENDIF
	IF L_LOOP == 400
		PRINTFORML
		PRINTFORML 【――――――――――――――――――遺伝子――――――――――――――――――】
		L_LOOP2  = 0
	ENDIF
	IF L_LOOP == 700
		PRINTFORML
		PRINTFORML 【――――――――――――――――――強化剤――――――――――――――――――】
		L_LOOP2  = 0
	ENDIF
	IF FlagNAME:(2100+L_LOOP) != ""
		IF L_LOOP2 >= 6
			PRINTFORML
			L_LOOP2  =0
		ENDIF
		PRINTFORM 【%FlagNAME:(2100+L_LOOP), 8 ,LEFT%:{Flag:(2100+L_LOOP), 3 ,RIGHT}】
	ENDIF
	L_LOOP2 += 1
	L_LOOP += 1
REND
PRINTFORML
DRAWLINE
PRINTFORML 
PRINTFORML [999] 戻る
INPUT
L_INPUT = RESULT
SELECTCASE L_INPUT
CASE 999
	CALL RPG_MAIN
CASEELSE
ENDSELECT

CALL RPG_MAIN




















