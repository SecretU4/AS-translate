;=================================================
;   sub SMN_INIT
;=================================================
;   SMN:初期化
;-------------------------------------------------
@SMN_INIT

;- 種族設定
VARSET GSMN_RACE
GSMN_RACE:00 = 人間
GSMN_RACE:01 = OTHER
GSMN_RACE:02 = ＴＭ
GSMN_RACE:03 = ＴＨ
GSMN_RACE:05 = 学園
GSMN_RACE:08 = 都市
GSMN_RACE:11 = 異界
GSMN_RACE:14 = 時間

GSMN_RACE:17 = ＤＤＳ
GSMN_RACE:18 = 都市

GSMN_RACE:20 = 悪魔
GSMN_RACE:41 = ADD-ON


;=================================================
;   sub SMN_LIST_RANGE
;=================================================
;   SMN:リスト範囲
;-------------------------------------------------
; Input:
;  ARG					No
;-------------------------------------------------
@SMN_LIST_RANGE(ARG)
#DIM L_RANGE
#DIM L_START

GSMN_LIST_START	= 0
GSMN_LIST_END	= 0

L_RANGE = 100
L_START = L_RANGE * ARG

SELECTCASE ARG
	;全部
	CASE 50
		GSMN_LIST_START	= 0
		GSMN_LIST_END	= 4300
	;悪魔
	CASE 20
		GSMN_LIST_START	= 2000
		GSMN_LIST_END	= 4000
	;人間
	CASE 00
		GSMN_LIST_START	= 0
		GSMN_LIST_END	= 170
	;OTHER
	CASE 01
		GSMN_LIST_START	= 170
		GSMN_LIST_END	= 200
	;ＴＭ
	CASE 02
		GSMN_LIST_START	= 200
		GSMN_LIST_END	= L_START + 150
	;ＴＨ
	CASE 03
		GSMN_LIST_START	= 350
		GSMN_LIST_END	= GSMN_LIST_START + 150
	;範囲が200
	;都市、ADD-ON
	CASE 18, 41
		GSMN_LIST_START	= L_START
		GSMN_LIST_END	= L_START + 200
	;範囲が300
	;学園、都市、時間
	CASE 05, 08, 11, 14
		GSMN_LIST_START	= L_START
		GSMN_LIST_END	= L_START + 300
	;その他
	CASEELSE
		GSMN_LIST_START	= L_START
		GSMN_LIST_END	= L_START + L_RANGE
ENDSELECT



;=================================================
;   sub SMN_PRINT_UNIT_TYPE_LIST
;=================================================
;   SMN:ユニットタイプリスト
;-------------------------------------------------
; Input:
;  ARG					タイプ
;-------------------------------------------------
@SMN_PRINT_UNIT_TYPE_LIST(ARG)
#DIM L_I
#DIM L_CNT
#DIMS L_STR

DRAWLINE

SIF ARG == 50
	ARG = -1

L_CNT = 0
FOR L_I, -1, 40

	;ADD-ON
	IF L_I == 16
		PRINTFORM [{4000+41}] %"ADD-ON",8,LEFT% 
	ELSE
		;男フォルダで改行
		IF L_I == 17
			IF !LINEISEMPTY()
				PRINTL
				L_CNT = 0
			ENDIF
		ENDIF

		IF L_I > -1
			L_STR = %GSMN_RACE:L_I%

			SIF L_STR == ""
				CONTINUE
	;		SIF GETBIT(FLAG:作品制御フラグ, L_I)
	;			CONTINUE
		ENDIF

		SIF L_I == ARG
			SETCOLOR COLOR("水色")

		IF L_I == -1
			PRINTFORM [{4000+50}] %"全て",8,LEFT% 
		ELSE
			PRINTFORM [{4000+L_I}] %L_STR,8,LEFT% 
		ENDIF
	ENDIF


	L_CNT ++
	SIF !(L_CNT % 5)
		PRINTL
	RESETCOLOR
NEXT

SIF !LINEISEMPTY()
	PRINTL

DRAWLINE

