;=================================================
;   sub SMN_ORIGIN_CTL
;=================================================
;   SMN:出身作品制御
;-------------------------------------------------
@SMN_ORIGIN_CTL
#DIM L_I
#DIM L_INPUT
#DIM L_LINE
#DIM L_PAGE
#DIM L_PAGE_MAX
#DIM L_PREV
#DIM L_NEXT
#DIM L_HIT
#DIM L_CNT_PRINT_DATA

L_LINE = LINECOUNT
REDRAW 0

$PRINT_LIST

;ライン表示:新ページ
CALL C_LINE

; キャラ表示数/P
L_CNT_PRINT_DATA = FLAG:定数_キャラ表示数 * 2
L_PAGE_MAX = (GSMN_ORIGIN_NUM-1) / L_CNT_PRINT_DATA

PRINTFORML 【出身作品制御】
PRINTFORML 購入するキャラの出身作品を選択します。
PRINTFORML ＜page.{L_PAGE}/{L_PAGE_MAX}＞ (計{GSMN_ORIGIN_NUM-1}作品＋その他)
DRAWLINE


L_PREV = 0
L_NEXT = 0
L_HIT = 0
FOR L_I, (L_PAGE * L_CNT_PRINT_DATA), GSMN_ORIGIN_NUM,

	L_HIT ++

	;- 次ページを作成する必要があるか
	IF L_HIT > L_CNT_PRINT_DATA
		;次ページ有りの場合、当ページは出力完了の為終了
		L_NEXT = 1
		BREAK
	ENDIF

	PRINTFORM [{L_I,4}] %GSMN_ORIGIN:L_I, 44, LEFT%  


	;改行
	SIF (L_I % 2) == 1
		PRINTL
NEXT

L_PREV = (L_PAGE <= 0) ? 0 # 1

;- 空行
FOR L_I, 0, FLAG:定数_キャラ表示数 - (L_HIT / 2)
	PRINTL
NEXT

DRAWLINE
PRINTFORMLC \@(!L_PREV) ? %" " * 16% # [5007]前のページ\@
PRINTLC [5000]戻る
PRINTFORMLC \@(!L_NEXT) ? %" " * 16% # [5009]次のページ\@
PRINTFORMLC [5050]全て
PRINTL

$INPUT_LOOP
INPUT
L_INPUT = RESULT

SELECTCASE L_INPUT
	CASE 5000
		REDRAW 1
		RETURN
	CASE 5050
		GSMN_ORIGIN_NO = -1
		REDRAW 1
		RETURN
	;前のページ
	CASE 5007
		SIF !L_PREV
			GOTO ERROR
		L_PAGE -= 1
		GOTO PRINT_LIST
	;次のページ
	CASE 5009
		SIF !L_NEXT
			GOTO ERROR
		L_PAGE += 1
		GOTO PRINT_LIST
	CASE 0 TO GSMN_ORIGIN_NUM
		GSMN_ORIGIN_NO = L_INPUT
		REDRAW 1
		RETURN
	CASEELSE
		$ERROR
		;INPUTエラー対応
		CALL C_INPUT_ERROR
		GOTO INPUT_LOOP
ENDSELECT

CLEARLINE LINECOUNT - L_LINE

RESTART


