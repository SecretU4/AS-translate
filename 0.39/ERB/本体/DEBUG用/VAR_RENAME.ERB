PRINTFORML ;%RESULTS%
PRINTL ;-------------------------------------------------------------------------------
PRINTL
IF L_CHARA
	PRINTL ;-----------------------------
	PRINTL ;キャラクター番号
	PRINTL ;-----------------------------

	L_TMP = GETNUM(CSTR,"CHARA_RENAME")
	IF L_TMP == -1
		PRINTL ※
		PRINTL "CHARA_RENAME"が存在しません
		PRINTL RENAME用の文字列を指定してください
	ELSE

		PRINTFORML -999 , キャラ:ＤＵＭＭＹ

		FOR L_I, 0, FLAG:最大数_キャラ
			L_STR = %VAR_MAKE_RENAME_UNIQUE_KEY(L_I)%
			SIF L_STR == ""
				CONTINUE
			PRINTFORML {L_I} , キャラ:%L_STR%
		NEXT
	ENDIF

	PRINTL
ENDIF

