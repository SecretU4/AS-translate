;-------------------------------------------------
@VAR_MAKE_RENAME_PRINT
#DIM L_I
#DIM L_CHARA
#DIM L_TMP
#DIMS L_STR

L_CHARA=1

CLEARLINE LINECOUNT
PRINTL ;*******************************************************************************
