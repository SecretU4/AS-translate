;=================================================
;   sub SYSTEM_HELP_MAIN
;=================================================
;   SYSTEM:ヘルプ
;-------------------------------------------------
@SYSTEM_HELP_MAIN
#DIM L_I
#DIM L_CNT
#DIM L_MAX
#DIMS L_STR

L_MAX=100

;-----------------------------
;-- ヘッダ部
;-----------------------------
;ライン表示:新ページ
CALL C_LINE

PRINTFORML 調教典には各種情報が記載されています。
DRAWLINE


;-----------------------------
;-- データ部
;-----------------------------
VARSET Q
FOR L_I, 0, L_MAX
	Q:L_I = 1
	L_CNT ++

	SELECTCASE L_I
		CASE 20
			PRINTL
		CASE 30
			PRINTL
		CASE 100
			PRINTL
	ENDSELECT

	;- ヘルプ:データ
	CALL _SYSTEM_HELP_DATA(L_I, 0)

	IF STRLENS(RESULTS)
		L_STR = %RESULTS%
	ELSE
		;初期化
		Q:L_I = 0
		L_CNT --
		CONTINUE
	ENDIF

	PRINTFORMLC [{L_I,3}] %L_STR%
	PRINTL

NEXT

SIF L_CNT
	PRINTL
PRINTL
PRINTLC 　
PRINTLC [1000] - 戻る
PRINTL
PRINTL


;-----------------------------
;- コマンド受付
;-----------------------------
$INPUT_LOOP
INPUT

SELECTCASE RESULT
	;戻る
	CASE 1000
		RETURN

	;データ
	CASE 0 TO (L_MAX - 1)
		IF !Q:RESULT
			CALL C_INPUT_ERROR
			GOTO INPUT_LOOP
		ENDIF

		;- ヘルプ:データ
		CALL _SYSTEM_HELP_DATA(RESULT, 1)

	CASEELSE
		CALL C_INPUT_ERROR
		GOTO INPUT_LOOP
ENDSELECT
RESTART




