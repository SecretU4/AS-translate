	CASE IS >= 6
		PRINTFORML 配下達は館の待遇に満足している様です。
	CASE IS >= 3
		PRINTFORML 配下達は館の待遇に好印象を持っている様です。
	CASEELSE
		PRINTFORML 配下達は館の待遇に不満は無い様です。
ENDSELECT
PRINTL

L_VAL *= 10
L_VAL = MIN(L_VAL, L_MAX)

;- 加算
REPEAT CHARANUM
	SIF COUNT == MASTER
		CONTINUE
	JUEL:COUNT:配下 += L_VAL
	JUEL:COUNT:配下 = MIN(FLAG:最大数_JUEL, JUEL:COUNT:配下)
REND

PRINTFORML 配下の珠 +{L_VAL,2}
PRINTL
WAIT


;=================================================
;   sub MNG_FC_UPGRADE
;=================================================
;   経営:設備(アップグレード)
;-------------------------------------------------
; Input:
;  ARGS					変数名
;  ARG:0				BIT位置
;  ARG:1				コスト
; Output:
;  RETURN				結果(真偽値)
;-------------------------------------------------
@MNG_FC_UPGRADE(ARGS, ARG:0, ARG:1)

IF GETBIT(FLAG:ARGS, ARG:0)
	CALL C_INPUT_ERROR("その項目は既にアップグレード済みです。")
	RETURN 0
ELSEIF MONEY < ARG:1
	CALL C_INPUT_ERROR(@"費用が足りません。（現在の所持金：{MONEY} / 費用：{ARG:1}）")
	RETURN 0
ELSE
	MONEY -= ARG:1
	SETBIT FLAG:ARGS, ARG

	PRINTL
	PRINTL ＜設備をアップグレードしました＞
	WAIT
	RETURN 1
ENDIF

