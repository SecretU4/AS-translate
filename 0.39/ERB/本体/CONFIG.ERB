;=================================================
;   sub CONFIG_PRINT_STATUS
;=================================================
;   コンフィグ(表示:状態)
;-------------------------------------------------
; Input:
;  ARGS					対象値
;-------------------------------------------------
@CONFIG_PRINT_STATUS(ARG)
IF ARG == 1
	;水色
	SETCOLOR 0x66FFFF
	PRINT  ON 
	RESETCOLOR
ELSEIF ARG == 0
	PRINT OFF 
ELSE
	PRINT --- 
ENDIF

