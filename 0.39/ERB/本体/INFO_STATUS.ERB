@INFO_SIMPLE_STATUS_EXP(ARG)
#DIM L_HIT
#DIM L_CNT

L_HIT=0
L_CNT=0
VARSET LOCAL

FOR LOCAL,0,VARSIZE("EXP")

	LOCALS = %EXPNAME:LOCAL%
	SIF STRLENS(LOCALS) <= 0
		CONTINUE
	LOCAL:1 = EXP:ARG:LOCAL
	SIF !LOCAL:1
		CONTINUE

	PRINTFORM %LOCALS , 16%
	PRINTFORM :LV{GETEXPLV(LOCAL:1,9)}
	PRINTFORM (%TOSTR(LOCAL:1) , 4%回)
	PRINT  
	L_HIT = 1

	L_CNT += 1
	IF L_CNT > 2
		PRINTL
		L_CNT = 0
		L_HIT = 0
	ENDIF

NEXT

SIF L_HIT
	PRINTL



