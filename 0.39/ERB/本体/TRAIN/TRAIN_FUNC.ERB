;=================================================
;   sub TR_ASSI_SET
;=================================================
;   TR:アシ設定
;-------------------------------------------------
@TR_ASSI_SET
#DIM L_I
#DIM L_T
#DIM L_CNT
VARSET ASSI

L_CNT=0
FOR L_I, 0, DEFTR_PL_NUM
	L_T = GTR_PL:L_I
	SIF L_T < 0
		BREAK
	SIF L_T == MASTER
		CONTINUE
	SIF L_T == TARGET
		CONTINUE
	ASSI = L_T

	L_CNT ++
NEXT

;３人以上居る場合はASSI無し
SIF L_CNT >= 3
	VARSET ASSI


;=================================================
;   sub TR_ASSI_ABLE
;=================================================
;   TR:アシ実行条件
;-------------------------------------------------
; Input:
;  ARG:0				対象者
; Output:
;  RETURNF				真偽値
;-------------------------------------------------
@TR_ASSI_ABLE(ARG=-1)
#FUNCTION

ARG = ( (ARG:0 < 0) ? TARGET # ARG:0)

;アシが存在
SIF ASSI < 0
	RETURNF 0

;両方体力あり
SIF (!BASE:ARG:体力) || (!BASE:ASSI:体力)
	RETURNF 0

;両方隷属以上
SIF (!MARK:ARG:隷属刻印) || (!MARK:ASSI:隷属刻印)
	RETURNF 0

;ＮＴＲ時は無し
SIF (TALENT:ARG:ＮＴＲ度) || (TALENT:ASSI:ＮＴＲ度)
	RETURNF 0

RETURNF 1


