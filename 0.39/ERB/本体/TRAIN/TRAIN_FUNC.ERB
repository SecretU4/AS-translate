;=================================================
;   sub TR_COM_PALAMCHG_SEX_ADD
;=================================================
;   TR:PALAM変動(性交時ソース追加)
;-------------------------------------------------
; Input:
;  ARG:0				実行者
;  ARG:1				対象者
;  ARGS					部位("Ｖ"、"Ａ")
;  ARG:2				逆性交フラグ
;-------------------------------------------------
@TR_COM_PALAMCHG_SEX_ADD(ARG:0, ARG:1, ARGS, ARG:2)
#DIM L_P
#DIM L_T
#DIM L_TMP
#DIMS L_KEY_P
#DIMS L_KEY_T

L_P = ARG:0
L_T = ARG:1

SELECTCASE ARGS
	CASE "Ｖ"
		L_KEY_P = 快Ｃ
		L_KEY_T = 快Ｖ
	CASE "Ａ"
		L_KEY_P = 快Ｃ
		L_KEY_T = 快Ａ
	;ERROR
	CASEELSE
		RETURN
ENDSELECT

;-----------------------------
;ソース追加処理
;-----------------------------

SOURCE:L_P:L_KEY_P += 300
;SIF MARK:L_T:隷属刻印
;	SOURCE:L_T:L_KEY_T += 100
;SIF MARK:L_T:陥落刻印
;	SOURCE:L_T:L_KEY_T += 200

;- 通常性交時
IF !ARG:2

	IF TCVAR:L_T:キャラ潤滑
		;無し
	ELSEIF TR_GETPALAMLV("潤滑", L_T) < 3
		SOURCE:L_T:苦痛 += 200
	ELSEIF TR_GETPALAMLV("潤滑", L_T) < 1
		SOURCE:L_T:苦痛 += 400
	ENDIF

;- 逆性交時
ELSE

	TCVAR:L_T:@"固定加算_%L_KEY_T%" += 1000
	TCVAR:L_P:@"固定加算_%L_KEY_P%" += 1000

	;計算用に攻守を戻す
	SWAP L_P, L_T

ENDIF

L_TMP = (10 * (ABL:L_T:篭絡 + ABL:L_P:技巧))
SOURCE:L_T:征服 += L_TMP
SIF MARK:L_T:陥落刻印
	SOURCE:L_T:純愛 += L_TMP


