;=================================================
;   sub TR_INFO_PALAM_MAIN
;=================================================
;   TR情報:PALAM(メイン)
;-------------------------------------------------
@TR_INFO_PALAM_MAIN(ARG:0)
#DIM L_I
#DIM L_TMP
#DIM L_CNT
#DIM L_ROW
#DIMS L_SPASE
#DIM L_HIT

L_ROW = 4	;列
L_CNT = 0
L_SPASE = 
L_SPASE += "    "

;-----------------------------
;- 表示ヘッダ
;-----------------------------
PRINT     
PRINTFORM 　　　　　　　　　　　　　　%LOCALS:10%＜対象:%CALLNAME%＞ 
PRINTFORM - 絶頂
BAR BASE:絶頂, MAXBASE:絶頂, 6
IF TCVAR:TARGET:イきそう
	SETCOLOR COLOR("ピンク")
	PRINTFORM (限界!!) 
	RESETCOLOR
ELSE
	PRINTFORM ({BASE:TARGET:絶頂,5}/{MAXBASE:TARGET:絶頂}) 
ENDIF
PRINTL
PRINTFORM 　　　　　　　　　　　　　　
;-----------------------------
;- 表示データ
;-----------------------------
FOR L_I,0,VARSIZE("PALAM")
	SIF !STRLENS(PALAMNAME:L_I)
		CONTINUE

	IF (L_CNT % L_ROW) == 0
		;既に出力済みなら改行
		IF L_CNT
			PRINTL
			PRINTFORM 　　　　　　　　　　　　　　
		ENDIF
		PRINTS L_SPASE
	ENDIF

	;- TR情報:PALAM(データ部)
	CALL TR_INFO_PALAM_DATA(L_I)

	RESETCOLOR
	L_CNT ++
NEXT
SIF !LINEISEMPTY()
	PRINTL

ARG:0 = TARGET
CALL C_PICTURE_H(ARG:0)
;-----------------------------
;- 装飾品
;-----------------------------
L_HIT=0
SIF !LINEISEMPTY()
	PRINTL
PRINTFORM 　　　　　　　　　　装着具：
L_TMP = TEQUIP:Ｖ器具
IF L_TMP
	SELECTCASE L_TMP
		CASE [[TRAIN:バイブ]]
			PRINT [バイブ] 
			L_HIT=1
	ENDSELECT
ENDIF

L_TMP = TEQUIP:Ａ器具
IF L_TMP
	SELECTCASE L_TMP
		CASE [[TRAIN:アナルバイブ]]
			PRINT [アナルバイブ] 
			L_HIT=1
	ENDSELECT
ENDIF

PRINTL 
IF L_HIT
ELSE
	CLEARLINE 1
ENDIF

PRINTL
RESETCOLOR


;=================================================
;   sub TR_INFO_PALAM_DATA
;=================================================
;   TR情報:PALAM(データ部)
;-------------------------------------------------
; Input:
;  ARG:0				PALAM番号
;-------------------------------------------------
@TR_INFO_PALAM_DATA(ARG:0)
#DIMS L_NAME
#DIM L_NO
#DIM L_VAL
#DIM L_LV
#DIM L_MAX
#DIM L_桁数
#DIM L_COLOR, 5
#DIMS L_STR
#DIM L_TMP

;-----------------------------
;- 初期設定
;-----------------------------
L_NO = ARG:0
L_NAME = %PALAMNAME:L_NO%
L_VAL = PALAM:L_NAME
L_LV = GETPALAMLV(L_VAL, 9)


;-----------------------------
;- 表示PALAM
;-----------------------------
;- 暗色
SIF !L_VAL
	SETCOLOR COLOR("伏字")

L_桁数 = 6

;- カラーバー出力時
IF 1
	VARSET L_COLOR
	VARSET LOCAL
	LOCAL:15=PALAMLV:(L_LV)
	LOCAL:16=PALAMLV:(L_LV + 1)

	LOCAL:17=LOCAL:16 - LOCAL:15
	LOCAL:18=L_VAL  - LOCAL:15

	IF GROUPMATCH(L_NAME, "恐怖", "苦痛", "抑鬱", "反感", "不快")
;		L_COLOR:0 = 0x003366
;		L_COLOR:1 = 0x336699
		L_COLOR:0 = 0x336699
		L_COLOR:1 = 0x0066cc
		L_COLOR:2 = 0x33001F
	ELSE
		L_COLOR:0 = 0xFF00FF
		L_COLOR:1 = 0xFF3399
		L_COLOR:2 = 0x33001F
	ENDIF

	PRINTFORM %L_NAME%Lv{L_LV,2} 
	CALLF CP_CUSTOM_BAR(LOCAL:18,LOCAL:17,L_桁数,L_COLOR:0,L_COLOR:1,L_COLOR:2)
	PRINT  
ENDIF

;-----------------------------
;- 数値
;-----------------------------
L_桁数 = 5
IF L_NAME == "潤滑" && L_VAL >= PALAMLV:6
	L_STR = %"摩擦0",L_桁数%
ELSE
	L_STR = {L_VAL,L_桁数}
ENDIF

PRINTFORM %L_STR% 


;-----------------------------
;- 前ターンの加算
;-----------------------------

L_TMP = CUP:L_NAME

IF L_TMP > 0
	SETCOLOR COLOR("群青")
	PRINT +
	RESETCOLOR
ELSE
	PRINT  
ENDIF
PRINT  


