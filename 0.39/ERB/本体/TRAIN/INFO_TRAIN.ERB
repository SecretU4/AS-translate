;=================================================
;   sub TR_INFO_PALAM_LINE_DATA
;=================================================
;   TR情報:行型PALAM(データ部)
;-------------------------------------------------
; Input:
;  ARG:0				対象キャラ
;  ARG:1				TARGET配列位置
;-------------------------------------------------
@TR_INFO_PALAM_LINE_DATA(ARG, ARG:1)
#DIM L_I
#DIM L_T
#DIM L_TMP

L_I=0
L_T=0

L_T = ARG

LOCALS=
PRINTFORM 　　　　　　　　　　　　　　
;- SET:種別
IF ARG == MASTER
	LOCALS =【主人】
ELSE
	CALL TR_INFO_STATE(L_T)
	LOCALS =%RESULTS%
ENDIF

PRINTFORM %LOCALS, 17, LEFT%
RESETCOLOR
PRINTFORM %CALLNAME:L_T, 18, LEFT%

SELECTCASE L_T
	CASE MASTER
		PRINT <M>
	CASE TARGET
		PRINT <
		SETCOLOR COLOR("水色")
		PRINT T
		RESETCOLOR
		PRINT >
	CASEELSE
		IF !ARG:2
			PRINTFORM [{ARG:1}]
		ELSE
			PRINTFORM [-]
		ENDIF
ENDSELECT
PRINT  

;-----------------------------
;-- ムード
;-----------------------------
CALL CP_HEARTB(VAR_MOOD_LV(L_T),FLAG:最大数_ムード桁数)
PRINT  

;-----------------------------
;- 個人BASE
;-----------------------------
PRINTFORM ({BASE:L_T:体力, 3}/{MAXBASE:L_T:体力, 3})


;-----------------------------
;- 個人BASE(特殊)
;-----------------------------
PRINTFORM (
SIF TCVAR:L_T:イきそう
	SETCOLOR COLOR("ピンク")
PRINTFORM {BASE:L_T:絶頂, 5}
RESETCOLOR
PRINTFORM /{TCVAR:L_T:絶頂回数, 2}回) 
PRINTFORM (%BARSTR(TCVAR:L_T:子宮射精回数, FLAG:最大値_子宮精液, 4)%{TCVAR:L_T:子宮射精回数, 2}回) 
IF TALENT:L_T:オトコ == 0
	IF TALENT:L_T:受精 != 0 
		SETCOLOR COLOR("ピンク")
		PRINTFORM 受精%UNICODE(0x2661)%
		RESETCOLOR
	ELSEIF  TALENT:L_T:妊娠 != 0
		SETCOLOR COLOR("ピンク")
		PRINTFORM 妊娠%UNICODE(0x2661)%
		RESETCOLOR
	ELSEIF CFLAG:L_T:受精現在耐久値 != 0
		PRINTFORM ({CFLAG:L_T:受精現在耐久値}/{CFLAG:L_T:受精最大耐久値})
	ELSE
		SETCOLOR COLOR("ピンク")
		PRINTFORM 受精確率{CFLAG:L_T:受精確率}％
		RESETCOLOR
	ENDIF
ENDIF
;- TR情報:PALAM(コマンド)
CALL TR_INFO_PALAM_COM(L_T)

PRINTL

;=================================================
;   sub TR_INFO_STATE
;=================================================
;   TR情報:状態
;-------------------------------------------------
; Input:
;  ARG:0				キャラ
; Output:
;  RESULTS				状態
;-------------------------------------------------
@TR_INFO_STATE(ARG)
#DIM L_T
#DIM L_TMP
#DIMS L_STR
L_T = ARG
L_STR =
RESULTS=

TFLAG:サブコマンド実行中フラグ=1

L_TMP=TEQUIP:L_T:ポイント性交
IF L_TMP
	;- 取得:コマンド名称
	CALLFORM COM_FUNC_GET_NAME_X{L_TMP}
	L_STR = %RESULTS%
ENDIF


TFLAG:サブコマンド実行中フラグ=0

SIF L_STR == ""
	RETURN

IF STRLENS(L_STR) > 8
	L_STR = 【%L_STR%】
ELSE
	L_STR = 【%L_STR%中】
ENDIF

SETCOLOR COLOR("ピンク")
RESULTS = %L_STR%

;=================================================
;   sub TR_INFO_PALAM_COM
;=================================================
;   TR情報:PALAM(コマンド)
;-------------------------------------------------
; Input:
;  ARG:0				キャラ
;-------------------------------------------------
@TR_INFO_PALAM_COM(ARG)
#DIM L_T
#DIM L_TMP
#DIMS L_STR
L_T = ARG
L_STR =

;-------------------
;- 道具系
;-------------------

;- Ｖ器具
L_TMP = TEQUIP:L_T:Ｖ器具
IF L_TMP
	CALLFORM COM_FUNC_GET_NAME_X{L_TMP}
	L_STR += @"[%RESULTS%] "
ENDIF

;- Ａ器具
L_TMP = TEQUIP:L_T:Ａ器具
IF L_TMP
	CALLFORM COM_FUNC_GET_NAME_X{L_TMP}
	SELECTCASE RESULTS
		CASE "アナルバイブ"
			RESULTS = Ａバイブ
	ENDSELECT
	L_STR += @"[%RESULTS%] "
ENDIF

SIF L_STR == ""
	RETURN

SETCOLOR COLOR("ピンク")
PRINTS L_STR
RESETCOLOR

