;  RESULT				真偽値
;-------------------------------------------------
@COM_FUNC_ABLE_X61

;- PLAYERにペニスが無いと不可
SIF !VAR_PENIS(PLAYER)
	RETURN 0

;- ASSIが居ないと不可
SIF ASSI < 0
	RETURN 0

;- 体力
SIF !BASE:体力 || !BASE:ASSI:体力
	RETURN 0

;- 隷属開始 + 技巧
SIF (!MARK:隷属刻印) || (ABL:技巧 < 2)
	RETURN 0

;- 隷属開始 + 技巧
SIF (!MARK:ASSI:隷属刻印) || (ABL:ASSI:技巧 < 2)
	RETURN 0

RETURN 1

