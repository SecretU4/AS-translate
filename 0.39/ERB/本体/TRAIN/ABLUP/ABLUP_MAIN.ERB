;=================================================
;   sub SYSTEM_ABLUP_LIST
;=================================================
;   SYSTEM:ABLUP画面(LIST)
;-------------------------------------------------
@SYSTEM_ABLUP_LIST
#DIM L_INPUT
#DIMS L_ERR_MSG

;-----------------------------
;- 初期処理
;-----------------------------
L_INPUT=0
L_ERR_MSG=

;-----------------------------
;- キャラリスト
;-----------------------------
RESULT:1=0
$CHARA_LIST

;- LIST:キャラリスト
CALL LIST_CHARA(@"能力を上昇させたいキャラを選んでください　", RESULT:1, L_ERR_MSG)
L_INPUT = RESULT

;- 表示:ページ別
SELECTCASE L_INPUT
	;- 終了
	CASE 1000
		RETURN 0
	;- キャラ
	CASEELSE
		;- 表示:ABLUP画面 主処理
		CALL ABLUP_MAIN(L_INPUT)
		GOTO CHARA_LIST
ENDSELECT
RESTART


