;=================================================
;   sub INFO_DATE
;=================================================
;   情報:日付
;-------------------------------------------------
@INFO_DATE

PRINTFORM {DAY}日目 
PRINTFORM (%GET_DAY(DAY)%) - 

;- 情報:時間帯
PRINTFORM %INFO_TIME(), 6, LEFT%
PRINT  


;=================================================
;   sub INFO_TIME
;=================================================
;   情報:時間帯
;-------------------------------------------------
@INFO_TIME
#FUNCTIONS

SELECTCASE FLAG:時間帯
	CASE [[時間帯:夜]]
		RETURNF "夜"
	;- 0:昼
	CASEELSE
		RETURNF "昼"
ENDSELECT


