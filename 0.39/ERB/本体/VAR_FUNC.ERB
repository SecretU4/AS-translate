;=================================================
;   sub VAR_MAKE_PL
;=================================================
;   VAR:プレイヤーリスト作成
;-------------------------------------------------
;   調教に参加するキャラ(プレイヤー)のリストを作成する
;-------------------------------------------------
@VAR_MAKE_PL
#DIM L_I
#DIM L_CNT
#DIM L_TGT

VARSET GTR_PL, -1
FLAG:調教対象人数 = 0

L_TGT = -1

L_CNT = 0
FOR L_I, 0, CHARANUM
	;- 除外
	IF L_I == MASTER
		;主人は許可
	ELSEIF !CFLAG:L_I:調教対象フラグ
		CONTINUE
	ENDIF

	;- 残ったキャラを保存
	GTR_PL:L_CNT = L_I

	SIF L_I != MASTER
		FLAG:調教対象人数 ++

	SIF (L_TGT < 0) && (L_I != MASTER)
		L_TGT = L_I

	L_CNT ++
NEXT

SIF TARGET != L_TGT
	TARGET = L_TGT


;=================================================
;   sub VAR_MAKE_CL
;=================================================
;   VAR:キャラリスト作成
;-------------------------------------------------
;   表示対象のキャラのリストを作成する
;-------------------------------------------------
@VAR_MAKE_CL
#DIM L_I
#DIM L_CNT

VARSET GTR_CL, -1

;フラグ類初期化
FLAG:陥落人数 = 0

L_CNT = 0
FOR L_I, 0, CHARANUM
	;- 除外

	;フラグ類カウント
	SIF TALENT:L_I:上位陥落
		FLAG:陥落人数 ++

	;- 残ったキャラを保存
	GTR_CL:L_CNT = L_I
	L_CNT ++
NEXT

;=================================================
;   sub VAR_GET_CL
;=================================================
;   VAR:キャラリスト取得
;-------------------------------------------------
; Input:
;  ARGS					処理(NEXT:次 PREV:前)
;  ARG:0				対象キャラ
; Output:
;  RETURNF				結果(該当キャラ、または-1)
;-------------------------------------------------
@VAR_GET_CL(ARGS, ARG)
#FUNCTION
#DIM L_I
#DIM L_TMP

L_TMP = FINDELEMENT(GTR_CL, ARG)
SIF L_TMP == -1
	RETURNF -1

SELECTCASE ARGS
	CASE "PREV"
		SIF !L_TMP
			RETURNF -1
		RETURNF GTR_CL:(L_TMP-1)

	CASE "NEXT"
		RETURNF GTR_CL:(L_TMP+1)
	;ERROR
	CASEELSE
		RETURNF -1
ENDSELECT


;=================================================
;   sub VAR_SET_TARGET
;=================================================
;   VAR:ターゲット設定
;-------------------------------------------------
; Input:
;  ARG:0				対象キャラ
; Output:
;  RETURNF				結果(0:OK 1:男女混合不可 2:体型エラー)
;-------------------------------------------------
@VAR_SET_TARGET(ARG)
#FUNCTION
#DIM L_I
#DIM L_T
#DIM L_P
#DIM L_HIT
#DIM L_SEX

L_P = ARG
L_HIT=0
L_SEX = VAR_SEX(ARG)

;体型チェック
IF (TALENT:L_P:小人体型 && !L_SEX) || TALENT:L_P:巨躯 || TALENT:L_P:非人型 
	L_HIT = 2
	GOTO CHKEND
ENDIF

FOR L_I,0,DEFTR_PL_NUM
	L_T = GTR_PL:L_I
	SIF L_T < 0
		BREAK
	SIF L_T == MASTER
		CONTINUE
	SIF L_T == L_P
		CONTINUE
	;性別が同じ
	SIF VAR_SEX(L_T) == L_SEX
		CONTINUE
	L_HIT = 1
	BREAK
NEXT

IF !L_HIT
	;- MASTER以外なら、規定人数までは自動でTARGETに
	IF MASTER != L_P
		IF FLAG:調教対象人数 < FLAG:最大数_調教人数
			CFLAG:L_P:調教対象フラグ = 1
			FLAG:調教対象人数 ++
		ENDIF
	ENDIF
ENDIF

$CHKEND
RETURNF L_HIT



