ELSEIF Talent:メイド != 0
	L_FH = 500
	IF Flag:都市_現在AP <= Flag:都市_最大AP
		Flag:都市_現在AP += (EXP:業務経験/40)+1
	ENDIF
ELSE
	L_FH = 2000
ENDIF


$FC_LOOP
IF L_FH >= L_FC
	L_FH2 += 1
	L_FH = L_FH*8
	GOTO FC_LOOP
ENDIF


SIF TALENT:情婦 == 1
	L_S = (EXP:売春経験+50)/50



SIF CFlag:住人_貢献値 <= 0
	CFlag:住人_貢献値 = 1


