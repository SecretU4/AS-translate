SIF L_FC >= 50000000
	L_FC = 50000000
IF Talent:アイドル != 0
	L_FH = 4000
ELSEIF Talent:社会人 != 0
	L_FH = 5000
ELSEIF Talent:学生
	L_FH = 5000
ELSEIF Talent:娼婦 != 0
	L_FH = 7000
ELSEIF Talent:聖職者 != 0
	L_FH = 500
