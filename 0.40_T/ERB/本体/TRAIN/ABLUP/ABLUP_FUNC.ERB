;=================================================
;   sub ABLUP_DEMAND_DEFAULT_JUEL
;=================================================
;   ABLUP:必要値デフォルト(珠)
;-------------------------------------------------
; Input:
;  ARG:0				現在の対象値LV
; Output:
;  ARG:0				必要値(珠)
;-------------------------------------------------
@ABLUP_DEMAND_DEFAULT_JUEL(ARG)
#FUNCTION
LOCAL = ARG

;- 式: 50 * 2^LV
;50
;100
;200
;400
;800
;1600
;3200
;6400

;;12800
;;25600

SIF LOCAL > 7
	LOCAL = 7
RETURNF 50 * ( POWER(2,LOCAL) )


;=================================================
;   sub ABLUP_DEMAND_DEFAULT_EXP
;=================================================
;   ABLUP:必要値デフォルト(経験)
;-------------------------------------------------
; Input:
;  ARG:0				現在の対象値LV
; Output:
;  ARG:0				必要値(珠)
;-------------------------------------------------
@ABLUP_DEMAND_DEFAULT_EXP(ARG)
#FUNCTION
LOCAL = ARG + 1
;- 式: 6*LV+1
;6
;12
;18
;24
;30
;36
;42
;48
;54
;60
IF LOCAL
	RETURNF 6 * LOCAL
ELSE
	RETURNF 0
ENDIF

