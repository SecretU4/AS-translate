L_T = TARGET

;-----------------------------
;COM別FLAGの設定
;-----------------------------
CFLAG:主人初キス = 1

;-----------------------------
;ソース追加処理
;-----------------------------

LOCAL:0 = 70
LOCAL:1 = 70
LOCAL:2 = 100

;-- 補正追加

;- 範囲:100%～200%
LOCAL:10 = ABL:L_P:기교
SELECTCASE LOCAL:10
	CASE 0 to 8
		L_TMP = 100 + (10 * LOCAL:10)
	CASEELSE
		L_TMP = 200
ENDSELECT
LOCAL:0 = LOCAL:0 * L_TMP / 100
LOCAL:1 = LOCAL:1 * L_TMP / 100
LOCAL:2 = LOCAL:2 * L_TMP / 100

;- ソース
SOURCE:L_T:快Ｃ += LOCAL:0
SOURCE:L_T:快Ｂ += LOCAL:1
SOURCE:L_T:性行為 += LOCAL:2


