;=================================================
;   sub GET_DAY
;=================================================
;   取得:曜日
;-------------------------------------------------
; Input:
;  ARG					日付
; Output:
;  RETURNF				曜日
;-------------------------------------------------
@GET_DAY(ARG)
#FUNCTIONS
VARSET LOCALS
SPLIT "일/월/화/수/목/금/토", "/", LOCALS

ARG %= 7

RETURNF LOCALS:ARG

