@Random_Chara_Set(ARG:0)
#DIM L_I
#DIM RCS_SST
#DIM RCS_body
#DIM RCS_bust
#DIM RCS_hip
#DIM RCS_TALENT1
#DIM RCS_TALENT2
#DIM RCS_RANDOM
#DIMS first1
#DIMS first2
#DIMS first3


L_I = ARG:0

RCS_RANDOM = RAND:16

IF RCS_RANDOM >= 14
	RCS_body = -3
	RCS_bust = -3
	RCS_hip = -3
ELSEIF RCS_RANDOM >= 12
	RCS_body = 3
	RCS_bust = 3
	RCS_hip = 3
ELSEIF RCS_RANDOM >= 9
	RCS_bust = -3
	RCS_hip = -3
ELSEIF RCS_RANDOM >= 6
	RCS_bust = 3 
	RCS_hip = 3
ELSE
ENDIF
	
;身体のサイズを指定
SELECTCASE  RAND:10 + RCS_body
	CASE is <= -3
		TALENT:L_I:작은체형 = 1
		TALENT:L_I:난쟁이체형 = 1
	CASE is <= 0
		TALENT:L_I:작은체형 = 1
	CASE is >= 10
		SIF !TALENT:L_I:작은체형
			TALENT:L_I:장신 = 1
	CASEELSE
ENDSELECT

IF TALENT:L_I:남자 == 0
	;胸のサイズを設定
	SELECTCASE  RAND:10 + RCS_bust
		CASE is <=0
			TALENT:L_I:절벽 = 1
		CASE 1,2,3
			TALENT:L_I:빈유 = 1
		CASE 7,8,9
			TALENT:L_I:거유 = 1
		CASE is >=10
			TALENT:L_I:폭유 = 1
	ENDSELECT
	;尻のサイズを設定
	SELECTCASE  RAND:10 + RCS_hip
		CASE 8,9
			TALENT:L_I:큰엉덩이 = 1
		CASE 10
			TALENT:L_I:터질듯한엉덩이 = 1
	ENDSELECT
ENDIF

;----------------------------------------------------------
;----------------------------------------------------------
;素質関連（区画）
;----------------------------------------------------------
;----------------------------------------------------------
SIF TALENT:L_I:합의 == 0
	TALENT:L_I:비합의 = 1

CALL SET_RANDOM_TALENT_MENTAL(L_I)
CALL SET_RANDOM_TALENT_SENCIBITY(L_I)

;----------------------------------------------------------
;----------------------------------------------------------
;상세정보
;----------------------------------------------------------
;----------------------------------------------------------
CALL CHARACTER_SCOUT_PERSONAL(L_I)
RETURN 0



