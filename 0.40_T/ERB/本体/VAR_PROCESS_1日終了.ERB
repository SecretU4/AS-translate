;=================================================
;   sub VAR_RESTART
;=================================================
;   VAR:二週目処理
;-------------------------------------------------
@VAR_RESTART
#DIM L_I
#DIM L_T

;-----------------------------
;- 変数類
;-----------------------------

;- 初期化
DAY = 1
TIME = 0
SIF MONEY < 500
	MONEY = 500

;奴隷ストック
VARSET GSMN_STOCK

;失踪キャラのデータ消去
CALL 中古処理初期化

;-----------------------------
;- キャラ引き継ぎ処理
;-----------------------------
FOR L_I, CHARANUM-1, -1, -1
	L_T = L_I

	SIF L_T == MASTER
		CONTINUE

	;引き継ぎ対象以外は削除
	IF (MARK:L_T:예속각인 < 3) || (MARK:L_T:함락각인 < 3)

		DELCHARA L_I
		CONTINUE

	;残す
	ELSE
		;初期化
		CFLAG:L_T:放置日数 = 0
	ENDIF

NEXT


