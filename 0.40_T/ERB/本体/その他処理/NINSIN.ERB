;=================================================
;   sub NINSIN_CHK
;=================================================
;   妊娠:チェック
;-------------------------------------------------
; Input:
;  ARG:0				対象キャラ
;  ARG:1				相手キャラ(-1:恋人 -2:애인 -3:娼館 それ以外:キャラ)
;  ARG:2				精液量
;  ARGS					相手キャラ名
;-------------------------------------------------
@NINSIN_CHK(ARG:0, ARG:1, ARG:2, ARGS="")
#DIM L_T
#DIM L_P
#DIM L_VAL
#DIM L_HIT
#DIM L_危険日

SIF !FLAG:妊娠機能
	RETURN

L_T = ARG:0
L_P = ARG:1

SIF TALENT:L_T:수정 != 0 || TALENT:L_T:妊娠 != 0 
	RETURN

;存在してるキャラ
IF L_P > -1
	CFLAG:L_T:妊娠相手番号	= NO:L_P
	CSTR:L_T:妊娠相手名		= %NAME:L_P%
;그 외 
ELSE
	CFLAG:L_T:妊娠相手番号 = -1
	;相手名は呼び出し元で設定
	IF ARG:1 == -1
		CSTR:L_T:妊娠相手名 = %CSTR:L_T:恋人名前%
	ELSEIF ARG:1 == -2
		CSTR:L_T:妊娠相手名 = 애인
	ELSE
		CSTR:L_T:妊娠相手名 = 불명
	ENDIF
ENDIF
SIF CSTR:L_T:妊娠相手名 == ""
	CSTR:L_T:妊娠相手名		= %ARGS%

;主人の子供
IF CFLAG:L_T:妊娠相手番号 == MASTER
	CFLAG:L_T:妊娠フラグ = 1
	CFLAG:MASTER:男体経験値 += 1
	IF CFLAG:MASTER:男体経験値 >= CFlag:MASTER:男体レベル*2
		CFLAG:MASTER:男体経験値 = 0
		CFlag:MASTER:男体レベル += 1
	ENDIF
;主人以外の恋人伴侶の子供
ELSEIF ARG:1 == -1 || ARG:1 > 0 
	CFLAG:L_T:妊娠フラグ = -1
;애인の子供
ELSEIF ARG:1 == -2
	CFLAG:L_T:妊娠フラグ = -2
;그 외 
ELSE
	CFLAG:L_T:妊娠フラグ = -3
ENDIF
CFLAG:L_T:妊娠開始日 = DAY


TALENT:L_T:수정 = 1
SIF TALENT:L_T:교제중 == 1 || TALENT:L_T:결혼완료 == 1　|| TALENT:L_T:백합결혼 == 1　
	TALENT:L_T:탁란 = 1

