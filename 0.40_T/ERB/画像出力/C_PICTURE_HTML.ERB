;;
;; Talent ([受精],[妊娠],) に対応する妊娠画像番号を返します。
;;
;; 引数
;;   ARG     キャラ番号を表す整数
;; 戻値
;;   妊娠画像番号を表す整数
;;
@C_PICTURE_NINSIN(ARG)
#FUNCTION
#DIM C_ninsin    ; 妊娠画像番号

SIF TALENT:ARG:妊娠 != 0
	C_ninsin = (TALENT:ARG:妊娠/4)+2
SIF TALENT:ARG:수정 != 0
	C_ninsin = 1
SIF C_ninsin >= 8
	C_ninsin = 8
	
SIF TALENT:ARG:妊娠 == 0 && TALENT:ARG:수정 == 0
	C_ninsin = 0

RETURNF C_ninsin



