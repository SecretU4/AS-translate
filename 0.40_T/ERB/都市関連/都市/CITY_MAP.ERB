
;-------------------------------------------------
; 都市関連
;-------------------------------------------------

@CITY_MAP


PRINTFORM 【날씨:
IF Flag:都市_天気 == 0
	PRINTFORM 맑음
ELSEIF Flag:都市_天気 == 1
	PRINTFORM 흐림
ELSEIF Flag:都市_天気 == 2
	PRINTFORM 비
ELSEIF Flag:都市_天気 == 3
	PRINTFORM 소나기
ELSEIF Flag:都市_天気 == 4
	PRINTFORM 눈
ENDIF

PRINTFORM 】


IF Flag:都市_Lv >= 5 &&  Flag:都市_防衛 != 0
	SETCOLOR 250,50,50
	SETBGCOLOR 90,10,10
	PRINTFORM 【남은 방위 기간:{Flag:都市_防衛}일】 【데미지 합계: 현재 {Flag:都市_防衛蓄積ダメージ}축적 / 목표 {Flag:都市_防衛成功ダメージ}도달】
ELSEIF Flag:都市_Lv >= 5 &&  Flag:都市_襲撃 <= 3
	SETCOLOR 250,50,50
	PRINTFORM 【습격까지:{Flag:都市_襲撃}일】
ELSEIF Flag:都市_Lv >= 5 &&  Flag:都市_襲撃 <= 9
	SETCOLOR 250,50,250
	PRINTFORM 【습격까지:{Flag:都市_襲撃}일】
ELSEIF Flag:都市_Lv >= 5 && Flag:都市_襲撃 >= 10
	SETCOLOR 50,250,250
	PRINTFORM 【습격까지:{Flag:都市_襲撃}일】
ELSE
	PRINTFORM 
ENDIF


IF Flag:都市_Lv >= 5 && Flag:都市_防衛損壊率 >= 75
	SETCOLOR 250,50,50
ELSEIF Flag:都市_Lv >= 5 && Flag:都市_防衛損壊率 >= 50
	SETCOLOR 250,50,250
ELSEIF Flag:都市_Lv >= 5 && Flag:都市_防衛損壊率 < 50
	SETCOLOR 50,250,250
ELSE
ENDIF
PRINTFORML 【파괴율:{Flag:都市_防衛損壊率}％】

RESETCOLOR
PRINTFORM 【도시 Lv:{Flag:都市_Lv, 3 ,RIGHT}({Flag:都市_経験値}/{Flag:都市_Lv*10})】
PRINTFORM 【표면 사회:{Flag:都市_表社会}】
PRINTFORM 【뒷면 사회:{Flag:都市_裏社会}】
PRINTFORM 【팬 합계：{FLAG:都市_合計ファン数}】
IF  Flag:都市_今期の締め切り < 10
	SETCOLOR 250,50,50
ELSEIF  Flag:都市_今期の締め切り < 30
	SETCOLOR 250,50,250
ELSEIF  Flag:都市_今期の締め切り >= 30
	SETCOLOR 50,250,250
ELSE
ENDIF
PRINTFORML 【결산까지:{Flag:都市_今期の締め切り}일】
RESETCOLOR
PRINTFORM 【자금:{MONEY}】
PRINTFORM 【TP:{Flag:都市_現在TP, 3 ,RIGHT}/{Flag:都市_最大TP, 3 ,RIGHT}】
PRINTFORM 【AP:{Flag:都市_現在AP, 3 ,RIGHT}/{Flag:都市_最大AP, 3 ,RIGHT}】
PRINTFORM 【SP:{Flag:都市_現在SP, 3 ,RIGHT}/{Flag:都市_最大SP, 3 ,RIGHT}】
PRINTFORM 【KP:{Flag:都市_現在KP, 3 ,RIGHT}/{Flag:都市_最大KP, 3 ,LEFT}】
PRINTFORM 【BP:{Flag:都市_現在BP, 3 ,RIGHT}】
PRINTFORML
PRINTFORML 【공적:{Flag:都市_功績, 10 ,RIGHT}】

