@RPG_EXPLORER_SELECT
#DIM          L_INPUT
#DIM          L_SUP_ID
#DIM          NOW_GROUP     ;REF用
#DIMS DYNAMIC OP_RELOAD     ;初回以外のページ更新とリスト更新を抑制する
IF CMATCH(CFLAG:0:住人_探索者, 1) == 0
	NOW_GROUP = 1
	CALL LIST_CHARA_STATUS_MAIN(0, NOW_GROUP, OP_RELOAD, "RPG", "≪외계 조사를 개시합니다、이번 탐색자를 선택하세요≫")
	OP_RELOAD = 「ページ更新無し」「リスト更新無し」
	L_INPUT = RESULT
	IF L_INPUT <= 0
		RETURN
	ENDIF
	CLEARLINE LINECOUNT
	DRAWLINE
	CALL C_PICTURE_RD(L_INPUT)
	DRAWLINE
	L_SUP_ID = INFO_STATUS_GET_BY_LABEL(L_INPUT, "部隊")
	IF L_SUP_ID
		PRINTFORML %CALLNAME:L_INPUT%は 현재 지원 부대에서 임무를 맡고 있습니다
		PRINTFORML 해임하고 탐색에 참가시켜도 괜찮을까요？
		PRINTFORML 
		PRINTFORML [1] - 탐색시킨다
		PRINTFORML [0] - 그만둔다    [9] - 다시 선택한다
		DO
			INPUT
			SELECTCASE RESULT
			CASE 1
				CALL SUPPORT_CHARA_REMOVE(L_INPUT)
			CASE 9
				RESTART
			CASE 0
				RETURN
			CASEELSE
				CONTINUE
			ENDSELECT
			BREAK
		LOOP 1
	ELSE
		PRINTFORML %CALLNAME:L_INPUT%が 외계 탐색을 개시합니다、괜찮을까요？
		PRINTFORML 
		PRINTFORML [1] - 탐색시킨다
		PRINTFORML [0] - 그만둔다    [9] - 다시 선택한다
		DO
			INPUT
			SELECTCASE RESULT
			CASE 1
			CASE 9
				RESTART
			CASE 0
				RETURN
			CASEELSE
				CONTINUE
			ENDSELECT
			BREAK
		LOOP 1
	ENDIF
	PRINTFORML %CALLNAME:L_INPUT%を 탐색 부대에 등록합니까？
	PRINTFORML 
	PRINTFORML [1] - 등록한다
	PRINTFORML [0] - 하지 않는다
	DO
		INPUT
		SELECTCASE RESULT
		CASE 1
			CALL SUPPORT_CHARA_SET(L_INPUT, 3)
		CASE 0
		CASEELSE
			CONTINUE
		ENDSELECT
		BREAK
	LOOP 1
ELSE
	NOW_GROUP = 1
	CALL LIST_CHARA_STATUS_MAIN(0, NOW_GROUP, OP_RELOAD, "EXPLORER", "≪외계 조사를 개시합니다、이번의 탐색자를 선택하세요≫")
	L_INPUT = RESULT
	OP_RELOAD = 「ページ更新無し」「リスト更新無し」
	IF L_INPUT <= 0
		RETURN
	ENDIF
	CLEARLINE LINECOUNT
	DRAWLINE
	CALL C_PICTURE_RD(L_INPUT)
	DRAWLINE
	PRINTFORML %CALLNAME:L_INPUT%が 외계 탐색을 개시합니다、괜찮을까요？
	PRINTFORML 
	PRINTFORML [1] - 탐색시킨다
	PRINTFORML [0] - 그만둔다    [9] - 다시 선택한다
	DO
		INPUT
		SELECTCASE RESULT
		CASE 1
		CASE 9
			RESTART
		CASE 0
			RETURN
		CASEELSE
			CONTINUE
		ENDSELECT
		BREAK
	LOOP 1
ENDIF
