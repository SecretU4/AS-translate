			CFLAG:L_I:住人_現在BRE = 0
	ELSE
		CFLAG:L_I:住人_현재체력 -= (Flag:調査瘴気/2)+1
		CFLAG:L_I:住人_現在気力 -= (Flag:調査瘴気/2)+1
		SIF CFLAG:L_I:住人_현재체력 <= 0
			CFLAG:L_I:住人_현재체력 = 1
		SIF CFLAG:L_I:住人_現在気力 <= 0
			CFLAG:L_I:住人_現在気力 = 1
	ENDIF
ENDIF


SIF CFlag:L_I:住人_現在気力 >= Flag:フロア_消耗
	CALL RPG_EVENT_MAIN



GOTO INPUT_LOOP







