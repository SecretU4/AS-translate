		SAVESTR:調査_状況2 = 
	ELSE
		CALL RPG_BATTLE(ARG)
	ENDIF
ENDIF

IF Flag:調査瘴気 > 0
	IF CFLAG:L_I:住人_現在BRE > 0
		CFLAG:L_I:住人_現在BRE -= Flag:調査瘴気
