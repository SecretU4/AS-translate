	Flag:調査深度 = 0
	Flag:調査瘴気 = 0
CASE 4
	Flag:調査区域 = 4
	Flag:調査深度 = 0
	Flag:調査瘴気 = 0
CASE 5
	Flag:調査区域 = 5
	Flag:調査深度 = 0
	Flag:調査瘴気 = 3
CASE 50
	Flag:調査区域 = 50
	Flag:調査深度 = 0
	Flag:調査瘴気 = 15
CASE 90
	Flag:調査区域 = 90
	Flag:調査深度 = 0
	Flag:調査瘴気 = 0
CASE 999
	CALL RPG_MAIN
CASEELSE
	GOTO INPUT_LOOP
ENDSELECT


