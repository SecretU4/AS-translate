;=================================================
;   sub SYS_SAVE_EXE
;=================================================
;   SYSTEM:セーブ実行
;-------------------------------------------------
; Input:
;  ARG					位置
;-------------------------------------------------
@SYS_SAVE_EXE(ARG)
#DIM L_IDX
L_IDX = ARG

;- 初期化
SAVEDATA_TEXT = 

;- 作成:セーブデータ
CALL _MAKE_SAVEDATA
GETTIME
RESULTS = %RESULTS% %SAVEDATA_TEXT%
SAVEDATA L_IDX, RESULTS
SAVEGLOBAL

;- CLEAR
VARSET RESULTS


