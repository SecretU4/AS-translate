;-------------------------------------------------
;学園イベント
;-------------------------------------------------
@TURN_EVENT_F_1
#DIM L_K


L_K = (RAND:3)+1


DRAWLINE
SETCOLOR 150,150,250
CALL PRINT_LABEL("学園イベント(施設)",,,CALLNAME)
PRINTL
PRINTFORML %CALLNAME%は学園にて再教育を受けている。
PRINTFORML 正しい知識・道徳を身に着け、常識力を獲得していく…
PRINTFORML  

RESETCOLOR

CALL TURN_EVENT_NNK

;モラル30未満の場合は5%の確率でモラル増加せず
IF RAND:100 >= 95 && CFLAG:住人_モラル < 30
	CALL TURN_EVENT_F_1_Mi
	L_K = 0
	
	PRINTFORML %CALLNAME%の再教育に失敗した。
	PRINTFORMW モラル　{CFLAG:住人_モラル}
ELSE
	;非処女の娼婦である場合は5%の確率でイベント発生
	SIF RAND:100 >= 95 && TALENT:娼婦 && TALENT:非処女
		CALL TURN_EVENT_F_1_PRO

	;モラルが100
	IF CFLAG:住人_モラル == 100
		PRINTFORMW %CALLNAME%のモラルは充分に高まった。
	;モラルが98未満
	ELSEIF CFLAG:住人_モラル < 98
		PRINTFORML %CALLNAME%のモラルが上昇した。
		PRINTFORMW モラル　{CFLAG:住人_モラル} → {CFLAG:住人_モラル+L_K}

		CFLAG:住人_モラル += L_K
	;モラルが98,99
	ELSE
		PRINTFORML %CALLNAME%のモラルが上昇した。
		PRINTFORMW モラル　{CFLAG:住人_モラル} → 100

		CFLAG:住人_モラル = 100
	ENDIF
ENDIF 




