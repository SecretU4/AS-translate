;-------------------------------------------------
;不穏イベント
;-------------------------------------------------
@TURN_EVENT_FON

;保護されている住民は戻す
SIF CFLAG:特別保護 != 0
	RETURN

;性関係
IF CFlag:住人イベント傾向_性 > RAND:100 
	IF !RAND:8 && CFLAG:住人_モラル < 0
		CALL TURN_EVENT_FON_1
	ELSEIF !RAND:7 && CFLAG:住人_カルマ >= 20
		CALL TURN_EVENT_I_R
	ELSEIF !RAND:6 && CFLAG:住人_モラル < 0
		CALL TURN_EVENT_HJ_S
	ELSEIF !RAND:5 && CFLAG:住人_モラル <= 0 && CFLAG:窃盗の代償アフター >= 1
		CALL TURN_EVENT_NSM_AF
	ELSEIF !RAND:4 && CFLAG:住人_モラル <= 0 && CFLAG:窃盗の代償アフター == 0
		CALL TURN_EVENT_NSM
	ELSEIF !RAND:3 && CFLAG:住人_モラル <= 0 && CFLAG:住人_カルマ >= 40 && TALENT:治安維持局員 == 1 && CFLAG:悪徳治安維持局員 >= 0
		CALL TURN_EVENT_AKTKC
	ELSEIF !RAND:2 && CFLAG:住人_モラル <= 20 && CFLAG:住人_カルマ >= 20
		CALL TURN_EVENT_FON_MWK
	ELSE
		CALL TURN_EVENT_SS
	ENDIF
ENDIF








