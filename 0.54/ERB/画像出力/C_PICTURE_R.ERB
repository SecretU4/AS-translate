@C_PICTURE_R(L_T)
#DIM L_T
#DIM L_X
#DIM L_Y
#DIMS LSTR
#DIMS LSTR_0
#DIMS LSTR_Z
#DIM L_area

L_X = 0
L_Y = -1300
L_area = C_PICTURE_AREA(FLAG:調査区域)

;-------------------------------------------------
;描画処理
;-------------------------------------------------
PRINTFORM 　　　　　　　　　　　　　　　　　
CALL PRINT_LABEL(CALLNAME:L_T)
PRINTL
PRINTFORM 　　　　　　　　　　　　　　　　　
CALL PRINT_RANGE_STATUS(L_T, "HP", "体力", , , "伏字", "％")
CALL PRINT_RANGE_STATUS(L_T, "SP", "気力", , , "伏字", "％")
PRINTL
PRINTFORM 　　　　　　　　　　　　　　　　　
CALL PRINT_STATUS(L_T, "GUTS" )
CALL PRINT_STATUS(L_T, "BRAVE")
PRINTL
PRINTFORM 　　　　　　　　　　　　　　　　　
CALL PRINT_STATUS(L_T, "SAN")
PRINTL
PRINTFORM 　　　　　　　　　　　　　　　　　
CALL PRINT_STATUS(L_T, "経験値")
PRINTL
PRINTFORM 　　　　　　　　　　　　　　　　　
CALL PRINT_LABEL("ATK",,,@"{CFlag:L_T:住人_ATK}",,,,@"+({FLAG:遺物_ATK合計値, 3,RIGHT})",,(!FLAG:遺物_ATK合計値 && Flag:STATUS伏字モード ? COLOR("伏字")#-1))
CALL PRINT_LABEL("DEF",,,@"{CFlag:L_T:住人_DEF}",,,,@"+({FLAG:遺物_DEF合計値, 3,RIGHT})",,(!FLAG:遺物_DEF合計値 && Flag:STATUS伏字モード ? COLOR("伏字")#-1))
PRINTL
PRINTFORM 　　　　　　　　　　　　　　　　　
CALL PRINT_LABEL("HIT",,,@"{CFlag:L_T:住人_HIT}",,,,@"+({FLAG:遺物_HIT合計値, 3,RIGHT})",,(!FLAG:遺物_HIT合計値 && Flag:STATUS伏字モード ? COLOR("伏字")#-1))
CALL PRINT_LABEL("SPD",,,@"{CFlag:L_T:住人_SPD}",,,,@"+({FLAG:遺物_SPD合計値, 3,RIGHT})",,(!FLAG:遺物_SPD合計値 && Flag:STATUS伏字モード ? COLOR("伏字")#-1))
PRINTL
PRINTFORM 　　　　　　　　　　　　　　　　　
CALL PRINT_LABEL("LUK",,,@"{CFlag:L_T:住人_LUK}",,,,@"+({FLAG:遺物_LUK合計値, 3,RIGHT})",,(!FLAG:遺物_LUK合計値 && Flag:STATUS伏字モード ? COLOR("伏字")#-1))
PRINTL
PRINTFORM 　　　　　　　　　　　　　　　　　
CALL PRINT_RANGE_STATUS(L_T, "BRE", , , , "伏字", "％")
PRINTL
PRINTFORML
PRINTFORML
CALL PRINT_LABEL("現在地",,,SAVESTR:調査_フロア名)
CALL PRINT_LABEL("深度",,,@"{Flag:調査深度}")
PRINTL
PRINTFORML %SAVESTR:調査_状況%
PRINTFORML %SAVESTR:調査_状況2%
PRINTFORML %SAVESTR:調査_一言%

LSTR_0 = <nonbutton pos='{L_X}'><img src='S_{L_area}_{FLAG:フロア_種類}' height = '1100' ypos = '{L_Y-200}'></nonbutton>
LSTR_Z = <nonbutton pos='{L_X}'><img src='S_NOISE_{FLAG:フロア_ノイズ}' height = '1100'  ypos = '{L_Y-200}'></nonbutton>
IF Talent:L_T:NPC == 0
	HTML_PRINT C_PICTURE_HTML(L_T, L_X, L_Y, 0, 850, LSTR_0, LSTR_Z)
ELSE
	HTML_PRINT C_PICTURE_NPC_HTML(L_T, L_X, L_Y, 0, 850, LSTR_0, LSTR_Z)
ENDIF


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;
;; 調査区域の値に対応するフロア画像番号を返します。
;;
;; 引数
;;   ARG     調査区域の値を表す整数。
;; 戻値
;;   フロア画像番号を表す整数。
;;
@C_PICTURE_AREA(ARG)
#FUNCTION
#DIM L_area

IF ARG >= 4
	L_area = 5
ELSE
	L_area = 1
ENDIF

RETURNF L_area