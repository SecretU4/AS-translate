;=================================================
;   sub CP_HEARTB_PINK
;=================================================
;   表示:ハートマーク(黒塗りピンク)
;-------------------------------------------------
;   塗りつぶしのハートマークを表示(ピンク)
;-------------------------------------------------
; Input:
;  ARG					ハートの数(デフォルト:1個)
;  ARG:1				出力桁数(デフォルト:ハートの数に比例)
;-------------------------------------------------
@CP_HEARTB_PINK(ARG:0=1, ARG:1=0)
#DIM DYNAMIC L_CURRENTCOLOR
L_CURRENTCOLOR = GETCOLOR()
;- ピンク
SETCOLOR 0xFF33CC

CALL CP_HEARTB(ARG, ARG:1)

SETCOLOR L_CURRENTCOLOR
RETURNFORM RESULT


;=================================================
;   sub CP_HEARTB
;=================================================
;   表示:ハートマーク(黒塗り)
;
;   [候補]
;   GungsuhChe			… (0x2665)ハート大きい
;   Times New Roman		… (0x2665)綺麗なハート。採用バリアント多し。人気
;   Webdings			… (0xF059)アート系のハート
;-------------------------------------------------
; Input:
;  ARG:0				ハートの数（省略すると1つ）
;  ARG:1				出力桁数(デフォルト:ハートの数に比例)
;-------------------------------------------------
@CP_HEARTB(ARG:0=1, ARG:1=0)
#DIM L_RES
#DIMS L_FONT
L_RES=RESULT
;-----------------------------
;L_FONT=GungsuhChe
;L_FONT=Webdings
L_FONT=Times New Roman
;-----------------------------

;- CHK:出力桁数
SIF ARG:1 < 1
	ARG:1 = ARG

GETFONT
CHKFONT L_FONT
SIF RESULT
	SETFONT L_FONT
PRINTFORM %UNICODE(0x2665) * ARG%

;- 桁数分を詰め(空白)
IF ARG:1 > ARG
	PRINTFORM %"　" * (ARG:1 - ARG),(ARG:1 - ARG)%
ENDIF

SETFONT RESULTS
RETURNFORM L_RES


;=================================================
;   sub CP_HEARTBW
;=================================================
