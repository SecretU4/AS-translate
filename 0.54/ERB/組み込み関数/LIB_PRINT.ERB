;=================================================
;   sub CP_PRINTFORM_HEART
;=================================================
;   表示:口上用ハートマーク挿入PRINT
;-------------------------------------------------
;   「ARGS:2〜」にセットした文章を、ハートマークを挟みながら出力する
;   表示は「%ARGS:2%ハート%ARGS:3%ハート…」となる
;   先頭文字と末端文字は、""をセットすれば省略可能
;-------------------------------------------------
; Input:
;  ARGS:0				先頭文字
;  ARGS:1				末端文字
;  ARGS:2〜9			出力文章(※ 間を空けず、詰めてセット)
;-------------------------------------------------
@CP_PRINTFORM_HEART(ARGS:0, ARGS:1, ARGS:2="", ARGS:3="", ARGS:4="", ARGS:5="", ARGS:6="", ARGS:7="", ARGS:8="", ARGS:9="")
#DIM L_CNT

SIF STRLENS(ARGS:0)
	PRINTS ARGS:0

l_CNT=2
WHILE 1
	SIF !STRLENS(ARGS:L_CNT)
		BREAK
	PRINTS ARGS:L_CNT
	CALL CP_HEARTB
	L_CNT ++
WEND

SIF STRLENS(ARGS:1)
	PRINTS ARGS:1

;=================================================
;   sub CP_PRINTFORM_COLORED
;=================================================
;   表示:着色済み文字
;-------------------------------------------------
; Input:
;  ARGS:0				出力文字
;  ARG					色
;  ARGS:1				出力文字2
;-------------------------------------------------
@CP_PRINTFORM_COLORED(ARGS:0,ARG,ARGS:1="")
#DIM L_COLOR

L_COLOR = GETCOLOR()
SETCOLOR ARG
PRINTFORM %ARGS:0%
RESETCOLOR
SIF ARGS:1 != ""
	PRINTFORM %ARGS:1%
SETCOLOR L_COLOR
RETURNFORM RESULT

