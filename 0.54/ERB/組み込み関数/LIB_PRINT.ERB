;=================================================
;   sub CP_CUSTOM_BAR
;=================================================
;   表示:カスタムBAR
;-------------------------------------------------
;   カスタマイズ可能なBARを表示する
;   単色及びグラデーションで表示可能
;-------------------------------------------------
;   [書式サンプル]
;   入力が必須なのは、ARG:1〜3の３つ
;
;   ;グラデ - 簡略記述
;   CP_CUSTOM_BAR(60, 100, 30, 0xFFFFFF, 0xFF00FF)
;   ;グラデ - 背景色追加
;   CP_CUSTOM_BAR(60, 100, 30, 0xFFFFFF, 0xFF00FF, 0x666699)
;   ;単色 - 簡略記述
;   CP_CUSTOM_BAR(60, 100, 30, 0xFFFFFF)
;   ;現在色 - 簡略記述
;   CP_CUSTOM_BAR(60, 100, 30)
;-------------------------------------------------
; Input:
;  ARG:0				バーの現在値
;  ARG:1				バーの最大値（-1で現在値=最大値として処理）
;  ARG:2				バーの長さ
;  ARG:3				バー始端の色（16進。省略すると現在の文字色）
;  ARG:4				バー終端の色（同上。省略すると単色バーに）
;  ARG:8				バー背景の色（同上。省略するとシステム設定の背景色に）
;  ARG:9				バーの文字種類（省略すると関数規定文字で表示）
;-------------------------------------------------
@CP_CUSTOM_BAR(ARG, ARG:1 = -1, ARG:2, ARG:3 = -1, ARG:4 = -1, ARG:8 = -1, ARG:9=0x2583)
#DIM L_I
#DIM L_COLOR
#DIM L_濃度比率
#DIM L_グラデフラグ
#DIM L_R, 3
#DIM L_G, 3
#DIM L_B, 3
#DIM L_現在値
#DIM L_最大値
#DIM L_長さ
#DIM L_始色
#DIM L_終色
#DIM L_バー長さ
#FUNCTION

L_現在値 = ARG
L_最大値 = ARG:1
L_長さ = ARG:2
L_始色 = ARG:3
L_終色 = ARG:4
L_バー長さ = L_長さ * L_現在値 / L_最大値
L_COLOR = GETCOLOR()
L_グラデフラグ=0

;- 始色・終色がセットされている場合
IF L_始色  >= 0 && L_終色 >= 0
	;- グラデーションで表示
	L_グラデフラグ=1

	;16進数をRGBに分解
	L_R:1 = L_始色 / 256 / 256
	L_G:1 = L_始色 / 256 % 256
	L_B:1 = L_始色 % 256
	L_R:2 = L_終色 / 256 / 256
	L_G:2 = L_終色 / 256 % 256
	L_B:2 = L_終色 % 256
ELSEIF L_始色 >= 0
	;- 単色で表示
	SETCOLOR L_始色
ELSE
	;- 現在色で表示
ENDIF

FOR L_I, 0, L_長さ
	IF L_グラデフラグ
		;出力毎の色彩濃度を計算し、反映
		L_濃度比率 = L_長さ - L_I
		L_R = (L_R:1 * L_濃度比率 + L_R:2 * L_I ) / (L_濃度比率 + L_I)
		L_G = (L_G:1 * L_濃度比率 + L_G:2 * L_I ) / (L_濃度比率 + L_I)
		L_B = (L_B:1 * L_濃度比率 + L_B:2 * L_I ) / (L_濃度比率 + L_I)
		SETCOLOR L_R, L_G, L_B
	ENDIF

	IF (L_I <= L_バー長さ) && L_現在値
;		ARG:9 = 0x2588
;		ARG:9 = 0x258B
;		ARG:9 = 0x2585
		PRINTFORM %UNICODE(ARG:9)%
	ELSE
		IF ARG:8 > -1
			SETCOLOR ARG:8
			PRINTFORM %UNICODE(ARG:9)%
		ELSE
			PRINTFORM  
		ENDIF
	ENDIF
NEXT
SETCOLOR L_COLOR



;=================================================
;   sub CP_CUSTOM_MAP
;=================================================
;   表示:カスタムMAP
;-------------------------------------------------
;   マップ文字列を着色して出力する
;-------------------------------------------------
; Input:
;  ARGS:0				文字列
;-------------------------------------------------
@CP_CUSTOM_MAP(ARGS)
#DIMS L_STR
#DIMS L_BAK
#DIM  L_COLOR
#DIM L_I
L_BAK = %ARGS%
L_COLOR = GETCOLOR()

;- 2バイトずつ使用
FOR L_I, 0, STRLENS(L_BAK), 2

	L_STR = %SUBSTRING(ARGS, L_I, 2)%

	SELECTCASE L_STR
		CASE "山"
			;茶
			SETCOLOR 0xCC9933
		CASE "森"
			;深緑
			SETCOLOR 0x009900
		CASE "林"
			;茶
			SETCOLOR 0x996600
		CASE "砂"
			;薄茶
			SETCOLOR 0xffcc33
		CASE "木"
			;茶
			SETCOLOR 0xCC9900
		CASE "川"
			;水色
			SETCOLOR 0x66CCCC
		CASE "海"
			;水色
			SETCOLOR 0x6699cc
		CASE "湖"
			;青
			SETCOLOR 0x3333CC
		CASE "竹"
			;濃緑
			SETCOLOR 0x006600
		CASE "道"
;			SETCOLOR 0x996633
			;灰
			SETCOLOR 0x999999
		CASE "農"
			;緑
			SETCOLOR 0x66CC66
		CASE "里"
			;青
			SETCOLOR 0x336699
		CASEELSE
			SETCOLOR L_COLOR
	ENDSELECT

	PRINTS L_STR
NEXT
PRINTL

;- クリア
L_STR=
L_BAK=

SETCOLOR L_COLOR



