;=================================================
;   sub OPPAI_DESCRIPTION
;=================================================
;   胸情報
;-------------------------------------------------
; Input:
;  ARG					キャラ
; Output:
;  RETURN				夢
;-------------------------------------------------
@OPPAI_DESCRIPTION(ARG)
#FUNCTIONS
#DIMS L_STR
SELECTCASE VAR_バストサイズ(ARG)
	CASE -2
		L_STR = 僅かに膨らみが感じられる程度の胸
	CASE -1
		L_STR = 小ぶりの胸
	CASE 0
		L_STR = 形の整った胸
	CASE 1
		L_STR = 手から溢れそうなほどの巨乳
	CASE 2
		L_STR = はちきれそうなほどの爆乳
ENDSELECT
;オトコ
SIF !VAR_SEX(ARG)
	L_STR =胸

RETURNF L_STR

