;=================================================
;   sub CLOTHES_CHG_MAIN
;=================================================
;   衣装:変更画面
;-------------------------------------------------
; Input:
;  ARG					キャラ
;-------------------------------------------------
@CLOTHES_CHG_MAIN(ARG)
#DIM L_CNT
#DIM L_POS
#DIM L_LEN
#DIMS L_KEY
#DIMS L_STR
#DIM L_INPUT
#DIM L_ID
#DIMS L_LIST, 100
#DIM L_TMP

L_POS = GETNUM(CSTR, "衣装名_帽子")
L_LEN = 7

CUSTOMDRAWLINE =
PRINTL 変更する衣装の個所を選んでください
DRAWLINE
REPEAT DEFCLOTHE_TYPE_NUM

	L_STR = %CSTR:ARG:(L_POS+COUNT)%

	L_KEY = %CSTRNAME:(L_POS+COUNT)%
	L_KEY = %SUBSTRING(L_KEY, L_LEN)%
	PRINTFORM [{COUNT,2}] %L_KEY, 12, LEFT%：%L_STR%
	PRINTL

REND
PRINTL
PRINTLC [100] 戻る
PRINTLC [20] デフォルト
PRINTLC [21] メイド服
;NTR陥落以上
IF NTR_LV(ARG) >= 3
	PRINTLC [22] ビッチギャル
ENDIF
PRINTL

$INPUT_LOOP_1
INPUT
L_INPUT = RESULT
SELECTCASE L_INPUT
	;戻る
	CASE 100
		RETURN
	CASE 0 TO (DEFCLOTHE_TYPE_NUM - 1)

		DRAWLINE
		PRINTL 変更する衣装を選んでください
		DRAWLINE
		VARSET L_LIST
		L_CNT = 0
		REPEAT 100

			IF !COUNT
				L_STR = %CSVCSTR(NO:ARG, GETNUM(CSTR, "衣装名_帽子")+L_INPUT, 0)%
				;存在する場合は除外
				SIF FINDELEMENT(GCLOTHE_NAME, L_STR) != -1
					L_STR = 
			ELSE
				L_STR = %GCLOTHE_NAME:( (L_INPUT*100) +COUNT)%
			ENDIF
			SIF !STRLENS(L_STR)
				CONTINUE

			L_LIST:COUNT = %L_STR%

			PRINTFORMLC [{COUNT,2}] %L_STR%
			L_CNT ++
			SIF !(L_CNT % 3)
				PRINTL

		REND
		SIF !LINEISEMPTY()
			PRINTL
		PRINTL
		PRINTL [100] 解除
		PRINTL [200] 戻る

		$INPUT_LOOP_2
		INPUT
		L_TMP = RESULT
		SELECTCASE L_TMP
			;解除
			CASE 100
				CSTR:ARG:(L_POS+L_INPUT) = 
			;戻る
			CASE 200
				RESTART
			CASE 0 TO 99
				SIF !STRLENS(L_LIST:L_TMP)
					GOTO ERROR_2
				CSTR:ARG:(L_POS+L_INPUT) = %L_LIST:L_TMP%
			CASEELSE
				$ERROR_2
				;INPUTエラー対応
				CALL C_INPUT_ERROR
				GOTO INPUT_LOOP_2
		ENDSELECT
	;デフォルト
	CASE 20
		CALL CLOTHES_SET_CUSTOM(ARG, "デフォルト")

	;メイド服
	CASE 21
		CALL CLOTHES_SET_CUSTOM(ARG, "メイド服")

	;ビッチギャル
	CASE 22,(NTR_LV(ARG) >= 3)
		CALL CLOTHES_SET_CUSTOM(ARG, "ビッチギャル")

	CASEELSE
		;INPUTエラー対応
		CALL C_INPUT_ERROR
		GOTO INPUT_LOOP_1
ENDSELECT
RESTART


