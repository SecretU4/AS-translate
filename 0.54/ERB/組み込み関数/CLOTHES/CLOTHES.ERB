;=================================================
;   sub INFO_STATUS_CLOTHES
;=================================================
;   表示:STATUS(衣装)
;-------------------------------------------------
; Input:
;  ARG:0				対象キャラ
;-------------------------------------------------
@INFO_STATUS_CLOTHES(ARG)
#DIM L_CNT
#DIM L_POS
#DIM L_LEN
#DIMS L_KEY
#DIMS L_STR

L_POS = GETNUM(CSTR, "衣装名_帽子")
L_LEN = 7

L_CNT=0
REPEAT DEFCLOTHE_TYPE_NUM

	L_STR = %CSTR:ARG:(L_POS+COUNT)%
	SIF !STRLENS(L_STR)
		CONTINUE

	L_KEY = %CSTRNAME:(L_POS+COUNT)%
	L_KEY = %SUBSTRING(L_KEY, L_LEN)%
	PRINTFORM %L_KEY, 12, LEFT%：%L_STR%
	PRINTL
	L_CNT ++

REND
IF L_CNT < 6
	REPEAT 6 - L_CNT
		PRINTL
	REND
ENDIF

PRINTL

