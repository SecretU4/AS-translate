
;-------------------------------------------------
; 喫茶店
;-------------------------------------------------
@CITY_CAFE(OP)
#DIMS OP       ;実行オプション
#DIM NOW_GROUP ;REF用
SIF !FLAG:定数_カフェ表示数
	FLAG:定数_カフェ表示数 = 10
NOW_GROUP = 1
CALL CITY_CAFE_NPC_TALK("ENTER")
CALL LIST_CHARA_STATUS_MAIN(0, NOW_GROUP, OP, "CAFE")
CALL CITY_CAFE_NPC_TALK("EXIT")


;-------------------------------------------------
;喫茶店員のセリフ制御関数
;-------------------------------------------------
@CITY_CAFE_NPC_TALK(EVENT)
#DIMS EVENT
SELECTCASE EVENT
CASE "ENTER"
;入店時
	DRAWLINE
	CALL C_PICTURE_NPC(100)
	PRINTFORML 店長さん　「あら、いらっしゃい。いつもの席でいいかしら？」
	PRINTFORML 店員ちゃん「では、ご案内致しますね！」
	DRAWLINE
	WAIT
CASE "EXIT"
;退店時
	DRAWLINE
	CALL C_PICTURE_NPC(100)
	PRINTFORML 店員ちゃん「お帰りになられまーす」
	PRINTFORML 店長さん　「はーい、また来て下さいね」
	DRAWLINE
	WAIT
CASE "SCOUT"
;勧誘用
	PRINTDATAL
		DATAFORM 店長さん「そうですねえ、あの子なんてどうでしょう？」
		DATAFORM 店長さん「そういえば、こんな人がいましたよ？」
		DATAFORM 店長さん「変わった子が最近来てましたよ、たしか…」
		DATAFORM 店長さん「そうそう、特徴的な人がいらしてました。まだいると思うのですが」
		DATAFORM 店長さん「仕事熱心ですね♪、ならあの人はどうでしょう」
	ENDDATA
ENDSELECT
