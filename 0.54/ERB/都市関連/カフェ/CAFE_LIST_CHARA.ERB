;=================================================
;   sub CAFE_LIST_CHARA
;=================================================
;   LIST:キャラリスト
;-------------------------------------------------
; Input:
;  ARGS:0				説明文
;  ARG:0				ページ位置
;  ARGS:1				再帰した際のエラーメッセージ
; Output:
;  RESULT:0				キャラ(1000の場合は"戻る")
;  RESULT:1				ページ位置
;-------------------------------------------------
@CAFE_LIST_CHARA(ARGS:0, ARG:0, ARGS:1)
#DIM L_INPUT
#DIM L_I
#DIM L_PAGE
#DIM L_CNT_DATA
#DIM L_CNT_PRINT
#DIM L_PREV
#DIM L_NEXT
#DIMS L_ERR_MSG
#DIMS L_CMSG

;-----------------------------
;- 初期処理
;-----------------------------

L_INPUT=0
L_I=0
L_PAGE=ARG:0
L_CNT_DATA=0
L_CNT_PRINT=0
L_CMSG = %ARGS:0%

; キャラ総数
L_CNT_DATA = CHARANUM

; キャラ表示数/P
L_CNT_PRINT = FLAG:定数_カフェ表示数


L_ERR_MSG = %ARGS:1%

IF Flag:定数_カフェ表示数 != 1000
	SIF !INRANGE(L_PAGE, 0, L_CNT_DATA / L_CNT_PRINT)
		L_PAGE = 0
ENDIF

;-----------------------------
;- 処理開始
;-----------------------------

$PRINT_LIST
	

	;;ライン表示:新ページ
	;CALL C_LINE
	;PRINTFORML カフェ用キャラリスト出力
	PRINTFORM %ARGS:0%＜page.{L_PAGE}＞ 
	PRINTFORML (計{L_CNT_DATA-1}人)

	L_I = 0
	WHILE 1

		;SET:開始値
		SIF L_I < (L_PAGE * L_CNT_PRINT) + 1
			L_I = (L_PAGE * L_CNT_PRINT) + 1

		IF Flag:定数_カフェ表示数 != 1000
		;ページ範囲外
		SIF L_I - 1 >= ( (L_PAGE + 1) * L_CNT_PRINT)
			BREAK
		ENDIF


		;- 最大キャラ数超過
		IF L_I >= L_CNT_DATA
			BREAK
		ELSE
			;あなたは非表示
			IF L_I == 0 && L_PAGE == 0
			ELSE
			;マンション時の説明文かを確認し、適合かつ部屋を持つキャラは番号を付けグレーに
			IF L_CMSG == "住む市民を選択して下さい" && CFLAG:L_I:マンションID != 0
				;住んでいる部屋番号ごとに丸文字を割り当て(全角1文字に揃えたい)
				SELECTCASE CFLAG:L_I:マンションID
					CASE 1
					PRINTFORM ①
					CASE 2
					PRINTFORM ②
					CASE 3
					PRINTFORM ③
					CASE 4
					PRINTFORM ④
					CASE 5
					PRINTFORM ⑤
					CASE 6
					PRINTFORM ⑥
					CASE 7
					PRINTFORM ⑦
					CASE 8
					PRINTFORM ⑧
					CASE 9
					PRINTFORM ⑨
					CASE 10
					PRINTFORM ⑩
				ENDSELECT
				SETCOLOR COLOR("伏字")
			ELSE
			PRINTFORM 　
			ENDIF
			PRINTFORM [%TOSTR(L_I),3%] 

			;- 表示:ターゲット(詳細)
			CALL CAFE_INFO_TARGET_DETAIL(L_I)
			PRINTL
			ENDIF
		ENDIF

		L_I += 1

	WEND
	;空行
	IF Flag:定数_カフェ表示数 != 1000
	L_PREV = (L_PAGE <= 0) ? 0 # 1
	L_NEXT = ( L_PAGE >= (L_CNT_DATA / L_CNT_PRINT) ) ? 0 # 1

	PRINTFORM \@(!L_PREV) ? %" " * 16% # [1007]前のページ\@ 
	;PRINTFORMLC [1000]戻る
	PRINTFORML \@(!L_NEXT) ? %" " * 16% # [1009]次のページ\@
	SIF STRLENS(L_ERR_MSG)
		REUSELASTLINE （%L_ERR_MSG%）
	ELSE
	PRINTL
	ENDIF

