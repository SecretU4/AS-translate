	Talent:L_I:絶壁 = 0
	Talent:L_I:貧乳 = 0
	Talent:L_I:巨乳 = 0
	Talent:L_I:爆乳 = 0
	SIF Flag:カフェ絞り込み_胸 != 65
		Talent:L_I:(Flag:カフェ絞り込み_胸) = 1
	CFLAG:L_I:バストサイズ = CHARACTER_BUST_RETURN(L_I)
