	EXP:L_I:精飲経験 +=(RAND:100)+20
	EXP:L_I:精液経験 += (RAND:100)+20
	EXP:L_I:フェラ経験 += (RAND:200)+50
	EXP:L_I:絶頂経験 += (RAND:100)+20
	SIF Talent:L_I:巨乳 == 1 || Talent:L_I:爆乳 == 1
		EXP:L_I:パイズリ経験 += (RAND:200)+70
