@CAFE_SCOUT_OPTION2(L_I,ARG:0,ARG:1,ARG:2)
#DIM L_I
#DIM L_M
#DIM L_SEIKAKU
#DIMS L_NAME
#DIMS L_NAME2
#DIM V_VIRGIN
#DIM A_VIRGIN
