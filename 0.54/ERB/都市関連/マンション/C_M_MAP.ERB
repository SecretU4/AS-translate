;	GOTO INPUT_LOOP
CASEELSE
	L_LS = RESULT
	;現在1〜10号室ですが今後拡張される可能性や方針が不明なので固定値でチェック
	;1〜10以外の数値が選択された場合ループ
	SIF L_LS < 1 || L_LS > 10
		GOTO INPUT_LOOP
	$INPUT_LOOP2_1

	;ページ送り処理初期化
	IF Flag:定数_カフェ表示数 != 1000
		L_PREV = (L_PAGE <= 0) ? 0 # 1
		L_NEXT = ( L_PAGE >= (CHARANUM / Flag:定数_カフェ表示数) ) ? 0 # 1
	ENDIF

	CLEARLINE LINECOUNT
	CALL C_LINE
	PRINTFORML ――――――――【{L_LS}号室】――――――――
	IF FLAG:(5000+L_LS) != 0
		;---------簡易検索---------
		L_LOOP = CHARANUM
		L_T = 0
		L_T2 = 0
		$IN_LOOP999
		IF FLAG:(5000+L_LS) == CFLAG:L_T:個別番号 && L_T2 == 0 && L_T != 0
			L_T2 = 1
		ENDIF
		SIF L_T2 == 0
			L_T += 1
		SIF L_LOOP > L_T && L_T2 == 0
			GOTO IN_LOOP999
		;--------------------------
		PRINTFORML 【住人:%CALLNAME:L_T%】
	ENDIF
	CALL C_LINE
	IF FLAG:(5000+L_LS) == 0
		;PRINTFORML [100] 住人選択
		;空室時住人リストを呼び出して一括処理に
		PRINTFORML 【{L_LS}号室】は現在空室です
		PRINTFORML 他の部屋に居住していない市民を住まわせることができます

		;喫茶店のリストを呼び出す際に説明文(引数1)をマンション用の処理の識別子として利用
		;CAFE_LIST_CHARA側で居住済みのキャラはグレーアウト+部屋番号表示(非表示は分かりにくいよね)
		CALL CAFE_LIST_CHARA("住む市民を選択して下さい",L_PAGE,"リストエラー")
		IF Flag:定数_カフェ表示数 == 1000
			PRINTFORML [3000] ページあたりキャラ表示数変更(現在無制限)
		ELSE
			PRINTFORML [3000] ページあたりキャラ表示数変更(現在{Flag:定数_カフェ表示数}人)
		ENDIF
	ENDIF
	PRINTFORML 

	SIF FLAG:(5030+L_LS) == 0 && FLAG:(5000+L_LS) != 0
		PRINTFORML [2801] 隠しカメラ実装
	;条件をカメラが設置済み、かつ住人が存在するに変更
	SIF FLAG:(5030+L_LS) != 0 && FLAG:(5000+L_LS) != 0
		PRINTFORML [2005] 盗撮
	PRINTFORML 
	SIF FLAG:(5000+L_LS) != 0
		PRINTFORMLC [2950] 解体
	PRINTFORML 
	PRINTFORML 
	PRINTFORMLC [9999] 戻る
	PRINTFORML 
	PRINTFORML 
	$INPUT_LOOP3
	INPUT
	REDRAW 0
	SELECTCASE RESULT
	;前のページ
	CASE 1007
		SIF !L_PREV
			GOTO ERROR
		L_PAGE -= 1
		GOTO INPUT_LOOP2_1
	;次のページ
	CASE 1009
		SIF !L_NEXT
			GOTO ERROR
		L_PAGE += 1
		GOTO INPUT_LOOP2_1
	CASE 0
		PRINTFORMW あなたは選択できません
		GOTO INPUT_LOOP2_1

	CASE 3000
		PRINTFORML ページ最大表示人数を選択または入力してください
		PRINTFORM [1000] 全表示(ページ無し) 
		PRINTFORM [5] 5人 
		PRINTFORM [10] 10人 
		PRINTFORM [15] 15人 
		PRINTFORML [20] 20人 
		PRINTFORML [-1] 変更せずに戻る
		INPUT
		L_INPUT = RESULT
		IF L_INPUT == 1000
			Flag:定数_カフェ表示数 = L_INPUT
			L_PAGE = 0
			PRINTFORMW 常に全員表示します
			L_PAGE = 0
		ELSEIF L_INPUT <= 999 && L_INPUT > 0
			Flag:定数_カフェ表示数 = L_INPUT
			L_PAGE = 0
			PRINTFORMW 表示人数を{L_INPUT}人に変更しました
		ELSE
		ENDIF

	CASE 2005
		;盗撮
		;カメラ未実装の場合警告メッセージ(通常表示されない)
		IF FLAG:(5030+L_LS) == 0
			PRINTFORMW カメラが実装されていません
			GOTO INPUT_LOOP2_1
		;更に住民が存在しないなら警告メッセージ(通常表示されない)
		ELSEIF FLAG:(5000+L_LS) == 0
			PRINTFORMW 誰も住んでいません
			GOTO INPUT_LOOP2_1
		ELSEIF TALENT:L_T:不在 == 1
			PRINTFORMW 不在のため選択できません
			GOTO INPUT_LOOP2_1
		ENDIF
		ARG:1 = L_T
		CALL C_M_CAMERA(ARG:1)
		GOTO INPUT_LOOP2_1

;旧選択肢 残りの選択肢はリストとの衝突回避に[+2000]しています
;	CASE 100
;	;住人選択
;		PRINTFORMW 住む市民を選択して下さい。
;		$LIST_LOOP10
;		PRINTFORML 
;		CALL LIST_CHARA
;		C_S = RESULT
;		IF C_S == 1000
;			GOTO INPUT_LOOP2_1
;		ELSEIF C_S == MASTER
;			PRINTFORMW %CALLNAME:MASTER%は選択できません
;			GOTO LIST_LOOP10
;		ELSEIF CFLAG:C_S:マンションID != 0
;			PRINTFORMW 既に他のルームに住んでいます。
;			GOTO LIST_LOOP10
;		ELSE

;			L_LOOP = 0
;			REPEAT 10
;			$SELECT_LOOP0
;				IF FLAG:(5000+L_LOOP) == CFLAG:RESULT:個別番号
;				ELSE
;					L_LOOP += 1
;				ENDIF
;			REND
;			FLAG:(5000+L_LS) = CFLAG:C_S:個別番号
;			CFLAG:C_S:マンションID = L_LS
;			PRINTFORMW %CALLNAME:C_S%に[{L_LS}号室]に住ませることにしました。
;		ENDIF
;		GOTO INPUT_LOOP2_1

	CASE 2801
		;カメラ実装
		;既にカメラ実装済みの場合は弾く(通常表示されない)
		;やる意味は薄いですが撤去できるようにしたほうがいいですか？
		;住人がいなくても数値入力で実装できちゃうけど変ではないし現状解体しても残る
		IF FLAG:(5030+L_LS) == 1
			PRINTFORMW 既にその部屋には実装されています
			GOTO INPUT_LOOP2_1
		ENDIF
		PRINTFORML 実装には資金50000円必要ですがよろしいですか？
		PRINTFORML [1] はい
		PRINTFORML [2] いいえ
		INPUT
		SELECTCASE RESULT
		CASE 1
			IF MONEY >= 50000
				MONEY -= 50000
				FLAG:(5030+L_LS) = 1
				PRINTFORMW {L_LS}号室に隠しカメラを実装しました。
			ELSE
				PRINTFORMW 資金が不足しています。
			ENDIF
		CASE 2
		ENDSELECT
		GOTO INPUT_LOOP2_1
	CASE 2950
		;解体
		;ここは初期化済かチェックする必要は無いかな
		;解体してもカメラは残る状態ですが住人が居ないと本来選択できない項目
		;どういう扱いにするのがいいでしょう？ひとまず現状維持
		PRINTFORML 解体すると全てが初期化されます、よろしいですか？
		PRINTFORML [1] はい
		PRINTFORML [2] いいえ
		INPUT
		SELECTCASE RESULT
		CASE 1
			REPEAT CHARANUM
				IF CFLAG:COUNT:個別番号 == FLAG:(5000+L_LS)
					CFLAG:COUNT:マンションID = 0
					BREAK
				ENDIF
				;COUNT == CHARANUM-1なら異常
			REND
			FLAG:(5000+L_LS) = 0
			PRINTFORMW [{L_LS}号室]を解体しました。
			GOTO INPUT_LOOP2_1
		CASE 2
		ENDSELECT
	CASE 9999
		;戻る
		GOTO INPUT_LOOP
	CASEELSE
		;住人割り当て
		;正しいキャラ番号かどうかチェック
		C_S = RESULT
		IF C_S < CHARANUM
			;数値入力対策に本当に空き部屋かチェック
			SIF FLAG:(5000+L_LS) != 0
			GOTO ERROR
			;NPCかどうかの判定
			IF TALENT:C_S:NPC == 1 
			PRINTFORMW NPCは選択できません
			;チェックを終えたら部屋とキャラの相互割り当て処理を従来Verからコピペ
			ELSEIF C_S == MASTER
				PRINTFORMW %CALLNAME:MASTER%は選択できません
				GOTO INPUT_LOOP2_1
			ELSEIF CFLAG:C_S:マンションID != 0
				PRINTFORMW 既に他のルームに住んでいます。
				GOTO INPUT_LOOP2_1
			ELSE
			IF CFlag:RESULT:住人_体格 == 1
				PRINTFORMW 子供は住むことができません。
				GOTO INPUT_LOOP2_1
			ENDIF
				L_LOOP = 0
				REPEAT 10
				$SELECT_LOOP0
					IF FLAG:(5000+L_LOOP) == CFLAG:RESULT:個別番号
					ELSE
						L_LOOP += 1
					ENDIF
				REND
				FLAG:(5000+L_LS) = CFLAG:C_S:個別番号
				CFLAG:C_S:マンションID = L_LS
				PRINTFORMW %CALLNAME:C_S%に[{L_LS}号室]に住ませることにしました。
			ENDIF
			GOTO INPUT_LOOP2_1
		ENDIF
		$ERROR
		PRINTFORMW 不正な入力です
		GOTO INPUT_LOOP2_1
	ENDSELECT
	;戻る
	GOTO INPUT_LOOP2_1
ENDSELECT
