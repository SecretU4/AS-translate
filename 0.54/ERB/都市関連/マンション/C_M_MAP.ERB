#DIM L_PAGE
#DIM L_PREV
#DIM L_NEXT

;ページ表示数の初期化チェック
SIF !Flag:定数_カフェ表示数
	Flag:定数_カフェ表示数 = 10

L_PAGE = 0
L_NEXT = 0
L_PREV = 0
L_F = 0
L_L = 1
L_L2 = 1
$INPUT_LOOP

L_L = L_L2
CLEARLINE LINECOUNT
CALL C_LINE

CALL C_LINE
PRINTFORML ――――――――【マンション】――――――――
REPEAT 10
PRINTFORM [{L_L}] 
L_T2 = 0
L_T = 0
L_LOOP = 0
PRINTFORM 【{L_L}号室】


L_LOOP = CHARANUM
$IN_LOOP
IF FLAG:(5000+L_L) == CFLAG:L_T:個別番号 && L_T2 == 0 && L_T != 0 
	PRINTFORM [住人:%CALLNAME:L_T%]
	L_T2 = 1
ELSE
ENDIF
L_T += 1
SIF L_LOOP > L_T && L_T2 == 0
	GOTO IN_LOOP
SIF CHARANUM <= L_T && L_T2 == 0
	FLAG:(5000+L_L) =  0
SIF L_T2 == 0
	PRINTFORM [住人:なし]
L_L += 1
PRINTFORML
REND
PRINTFORML
CALL C_LINE
PRINTFORML



$INPUT_LOOP2
PRINTLC [999] 戻る
INPUT
REDRAW 0

SELECTCASE RESULT
;マンションの部屋選択画面は3桁、部屋は4桁の数字に
CASE 999

;この処理何かに使ってますか？
;CASE 800
;	L_F -= 1
