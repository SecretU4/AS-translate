@EVENT_RAPE_INIT

;初回は100設定
SIF FLAG:労役治安 == 0
	FLAG:労役治安 = 100


;=================================================
;   sub EVENT_RAPE_治安処理
;=================================================
;   EVE:レイプ(治安処理)
;-------------------------------------------------
@EVENT_RAPE_治安処理
;武力が人気の75%未満で下がる
IF FLAG:労役人気*75/100 > FLAG:労役武力
	FLAG:労役治安 -= 3+RAND:3
ELSE
	FLAG:労役治安 += 3+RAND:3
ENDIF
;101以上1未満にならないように
FLAG:労役治安 = LIMIT(FLAG:労役治安, 1, 100)





