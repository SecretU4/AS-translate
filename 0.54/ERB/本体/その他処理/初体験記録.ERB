;==========================================================
;@初体験記録_調教
; 調教時の初体験記録
;
;<引数>
;ARG   = 対象者
;ARG:1 = 初体験の区別用（1.初えっち　2.初Ａえっち　3.初キス　4.初フェラ　5.初中出し　6.初絶頂　7.初精飲　8.初出産
;ARGS  = 相手名
;<変数>
;
;<戻り値>
;
;==========================================================
@初体験記録_調教, ARG, ARG:1, ARGS=""
#LOCALSSIZE 1

LOCALS=
;初体験の相手名を記録
SELECTCASE ARG:1
	;初えっち
	CASE 1
		LOCALS=初えっち相手名
	;初Ａえっち
	CASE 2
		LOCALS=初Ａえっち相手名
	;初キス
	CASE 3
		LOCALS=初キス相手名
	;初フェラ
	CASE 4
		LOCALS=初フェラ相手名
	;初中出し
	CASE 5
		LOCALS=初中出し相手名
	;初絶頂
	CASE 6
		LOCALS=初絶頂相手名
	;初精飲
	CASE 7
		LOCALS=初精飲相手名
	;初出産相手名
	CASE 8
		SIF CSTR:ARG:初出産相手名 == ""
			CSTR:ARG:初出産相手名 = %CSTR:ARG:妊娠相手名%
		RETURN
	;その他
	CASEELSE
		RETURN
ENDSELECT
SIF CSTR:ARG:LOCALS != ""
	RETURN

;名前有りの場合はそれをセット
IF STRLENS(ARGS)
	CSTR:ARG:LOCALS = %ARGS%
;主人
ELSEIF ARG == MASTER
	;奴隷をセット
	CSTR:ARG:LOCALS = %NAME:(TFLAG:メインターゲット)%
;それ以外はPLAYER
ELSE
	CSTR:ARG:LOCALS = %NAME:PLAYER%
ENDIF


