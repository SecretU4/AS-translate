;=================================================
;   sub COM_FUNC_SRC_Xxxx
;=================================================
;   コマンドソース
;-------------------------------------------------
@COM_FUNC_SRC_X41
#DIM L_P
#DIM L_T
#DIM L_TMP
#DIM L_I
VARSET LOCAL

L_P = PLAYER
L_T = TARGET

;-----------------------------
;COM別FLAGの設定
;-----------------------------

;-----------------------------
;ソース追加処理
;-----------------------------

LOCAL:0 = 100

;- 範囲:100%～200%
LOCAL:10 = (ABL:L_P:魅了技能)
SELECTCASE LOCAL:10
	CASE 0 to 8
		L_TMP = 100 + (20 * LOCAL:10)
	CASEELSE
		L_TMP = 200
ENDSELECT

LOCAL:0 = LOCAL:0 * L_TMP / 100

;- ソース
SOURCE:L_T:純愛 += LOCAL:0


;-----------------------------
;経験の処理
;-----------------------------

;- TR:異性愛経験
CALL TR_EXP_ADD_HETEROSEX(L_T,L_P)

;- 各種経験
GTR_EXPUP:L_P:DB_EXPUP_POS("誘惑経験") += 1


;-----------------------------
;その他の処理
;-----------------------------

;- NTR:計算
CALL NTR_CALC(L_T, -25)


