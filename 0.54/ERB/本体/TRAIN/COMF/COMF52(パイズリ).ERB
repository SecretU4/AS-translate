;=================================================
;   sub COM_FUNC_SRC_Xxxx
;=================================================
;   コマンドソース
;-------------------------------------------------
@COM_FUNC_SRC_X52
#DIM L_P
#DIM L_T
#DIM L_TMP
#DIM L_I
VARSET LOCAL

L_P = PLAYER
L_T = TARGET

;-----------------------------
;COM別FLAGの設定
;-----------------------------

;- POSE:SET
CALL POSE_SET(L_T, [[占有部位:Ｂ]])

;-----------------------------
;ソース追加処理
;-----------------------------

LOCAL:0 = 140
LOCAL:1 = 40
LOCAL:2 = 160
LOCAL:3 = 40

;-- 補正追加

;- 範囲:100%〜200%
LOCAL:10 = ABL:L_T:技巧
SELECTCASE LOCAL:10
	CASE 0 to 8
		L_TMP = 100 + (10 * LOCAL:10)
	CASEELSE
		L_TMP = 200
ENDSELECT
LOCAL:0 = LOCAL:0 * L_TMP / 100
LOCAL:1 = LOCAL:1 * L_TMP / 100
LOCAL:2 = LOCAL:2 * L_TMP / 100
LOCAL:3 = LOCAL:3 * L_TMP / 100

;- ソース
SOURCE:L_P:快Ｃ += LOCAL:0
SOURCE:L_T:性行為 += LOCAL:1
SOURCE:L_T:性奉仕 += LOCAL:2
SOURCE:L_T:快Ｂ += LOCAL:3


;-----------------------------
;経験の処理
;-----------------------------

;- TR:異性愛経験
CALL TR_EXP_ADD_HETEROSEX(L_T,L_P)

;- 各種経験
GTR_EXPUP:L_T:DB_EXPUP_POS("パイズリ経験") += 1
GTR_EXPUP:L_T:DB_EXPUP_POS("誘惑経験") += 2
GTR_EXPUP:L_T:DB_EXPUP_POS("奉仕快楽経験") += 1

;-----------------------------
;その他の処理
;-----------------------------



