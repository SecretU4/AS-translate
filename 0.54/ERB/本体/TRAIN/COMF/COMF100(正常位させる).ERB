;=================================================
;   sub COM_FUNC_SRC_Xxxx
;=================================================
;   コマンドソース
;-------------------------------------------------
@COM_FUNC_SRC_X100
#DIM L_P
#DIM L_T
#DIM L_TMP
#DIM L_I
VARSET LOCAL

L_P = PLAYER
L_T = TARGET

;-----------------------------
;COM別FLAGの設定
;-----------------------------

;- POSE:SET (※逆)
CALL POSE_SET(L_P, [[占有部位:Ｖ]], 1, L_T)

;-----------------------------
;ソース追加処理
;-----------------------------

LOCAL:0 = 150
LOCAL:1 = 150
LOCAL:2 = 60

;-- 補正追加

;- 範囲:100%〜300%
LOCAL:10 = ABL:L_T:技巧 + ABL:L_P:技巧
SELECTCASE LOCAL:10
	CASE 0 to 17
		L_TMP = 100 + (10 * LOCAL:10)
	CASEELSE
		L_TMP = 300
ENDSELECT
LOCAL:0 = LOCAL:0 * L_TMP / 100
LOCAL:1 = LOCAL:1 * L_TMP / 100
LOCAL:2 = LOCAL:2 * L_TMP / 100

;- ソース
SOURCE:L_P:快Ｖ += LOCAL:0
SOURCE:L_T:快Ｃ += LOCAL:1
SOURCE:L_T:性行為 += LOCAL:2


;-----------------------------
;経験の処理
;-----------------------------

;- 各種経験
GTR_EXPUP:L_P:DB_EXPUP_POS("誘惑経験") += 1
GTR_EXPUP:L_T:DB_EXPUP_POS("奉仕快楽経験") += 3

;-----------------------------
;その他の処理
;-----------------------------

;- TR:PALAM変動(Ｖ性交時) (※逆)
CALL TR_COM_PALAMCHG_SEX_V(TARGET, PLAYER, 1)



;=================================================
;   sub COM_FUNC_TRAIN_MSG_Xxxx
;=================================================
;   コマンドメッセージ
;-------------------------------------------------
@COM_FUNC_TRAIN_MSG_X100

;前回の体位が「正常位させる」
IF TEQUIP:ポイント性交前回 == [[TRAIN:正常位させる]]
	PRINTFORML %CALLNAME:PLAYER%のペニスを膣内に擦り付けながら、再び腰を動かさせた……

;前回の体位が逆Ｖ性交系の場合
ELSEIF TR_PREV_SEX_REV_V()
	PRINTFORML 膣内から抜き去ることなく仰向けになり、%CALLNAME%に腰を動かさせた……

;その他
ELSE
	PRINTFORM %CALLNAME:PLAYER%の
	;処女
	IF TCVAR:PLAYER:履歴_EXP_処女喪失
		PRINT 男を知らない
	;濡れ
	ELSEIF TCVAR:PLAYER:キャラ潤滑
		PRINT 濡れそぼった
	ENDIF
	;小柄体型
	IF TALENT:PLAYER:小柄体型
		PRINT 幼いワレメを
	ELSE
		PRINT 秘裂を
	ENDIF
	PRINTL 貫かせた……
ENDIF
;陥落済み
IF MARK:陥落刻印
	PRINTFORML %CALLNAME%は%CALLNAME:PLAYER%に腰を押し付けてきた……
ENDIF

WAIT


