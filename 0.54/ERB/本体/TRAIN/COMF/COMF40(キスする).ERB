@COM_FUNC_SRC_X40
#DIM L_P
#DIM L_T
#DIM L_TMP
#DIM L_I
VARSET LOCAL

L_P = PLAYER
L_T = TARGET

;-----------------------------
;COM別FLAGの設定
;-----------------------------
CFLAG:主人初キス = 1

;-----------------------------
;ソース追加処理
;-----------------------------

LOCAL:0 = 50
LOCAL:1 = 150

;- 範囲:100%～300%
LOCAL:10 = (ABL:L_P:技巧 + ABL:L_T:技巧)
SELECTCASE LOCAL:10
	CASE 0 to 8
		L_TMP = 100 + (20 * LOCAL:10)
	CASEELSE
		L_TMP = 300
ENDSELECT

LOCAL:0 = LOCAL:0 * L_TMP / 100
LOCAL:1 = LOCAL:1 * L_TMP / 100

;- ソース
SOURCE:L_T:接触		+= LOCAL:0
SOURCE:L_T:性行為	+= LOCAL:1
SIF MARK:L_T:隷属刻印
	SOURCE:L_T:純愛	+= 120


SOURCE:L_T:露出 += 120

;-----------------------------
;経験の処理
;-----------------------------

;- TR:異性愛経験
CALL TR_EXP_ADD_HETEROSEX(L_T,L_P)

;- 各種経験
