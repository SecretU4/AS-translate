@INFO_TARGET_MAIN
#DIM L_I
#DIM L_T

FOR L_I, 0, DEFTR_PL_NUM

	L_T = GTR_PL:L_I

	;CHK:END
	SIF L_T < 0
		BREAK

	IF L_T == MASTER
		CALL PRINT_LABEL("主人")
	ELSE
		PRINT 　　　　
	ENDIF

	;- 表示:ターゲット(詳細)
	CALL INFO_TARGET_DETAIL(L_T)
	PRINTL
NEXT
