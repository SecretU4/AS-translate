;=================================================
;   sub INFO_TIME
;=================================================
;   情報:時間帯
;-------------------------------------------------
@INFO_TIME
#FUNCTIONS

SELECTCASE FLAG:時間帯
	CASE [[時間帯:夜]]
		RETURNF "夜"
	;- 0:昼
	CASEELSE
		RETURNF "昼"
ENDSELECT


;=================================================
;   sub INFO_TARGET_MAIN
;=================================================
;   表示:ターゲット(主処理)
