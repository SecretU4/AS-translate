@RPG_EXPLORER_SELECT
#DIM          L_INPUT
#DIM          L_SUP_ID
#DIM          NOW_GROUP     ;REF用
#DIMS DYNAMIC OP_RELOAD     ;初回以外のページ更新とリスト更新を抑制する
IF CMATCH(CFLAG:0:住人_探索者, 1) == 0
	NOW_GROUP = 1
	CALL LIST_CHARA_STATUS_MAIN(0, NOW_GROUP, OP_RELOAD, "RPG", "≪外界の調査を開始します、今回の探索者を選択して下さい≫")
	OP_RELOAD = 「ページ更新無し」「リスト更新無し」
	L_INPUT = RESULT
	IF L_INPUT <= 0
		RETURN
	ENDIF
	CLEARLINE LINECOUNT
	DRAWLINE
	CALL C_PICTURE_RD(L_INPUT)
	DRAWLINE
	L_SUP_ID = INFO_STATUS_GET_BY_LABEL(L_INPUT, "部隊")
	IF L_SUP_ID
		PRINTFORML %CALLNAME:L_INPUT%は現在、支援部隊での任務を受け持っています
		PRINTFORML 解任して探索に参加させてもよろしいですか？
		PRINTFORML 
		PRINTFORML [1] - 探索させる
		PRINTFORML [0] - やめる    [9] - 選び直す
		DO
			INPUT
			SELECTCASE RESULT
			CASE 1
				CALL SUPPORT_CHARA_REMOVE(L_INPUT)
			CASE 9
				RESTART
			CASE 0
				RETURN
			CASEELSE
				CONTINUE
			ENDSELECT
			BREAK
		LOOP 1
	ELSE
		PRINTFORML %CALLNAME:L_INPUT%が外界の探索を開始します、よろしいですか？
		PRINTFORML 
		PRINTFORML [1] - 探索させる
		PRINTFORML [0] - やめる    [9] - 選び直す
		DO
			INPUT
			SELECTCASE RESULT
			CASE 1
			CASE 9
				RESTART
			CASE 0
				RETURN
			CASEELSE
				CONTINUE
			ENDSELECT
			BREAK
		LOOP 1
	ENDIF
	PRINTFORML %CALLNAME:L_INPUT%を探索部隊に登録しておきますか？
	PRINTFORML 
	PRINTFORML [1] - 登録する
	PRINTFORML [0] - しない
	DO
		INPUT
		SELECTCASE RESULT
		CASE 1
			CALL SUPPORT_CHARA_SET(L_INPUT, 3)
		CASE 0
		CASEELSE
			CONTINUE
		ENDSELECT
		BREAK
	LOOP 1
ELSE
	NOW_GROUP = 1
	CALL LIST_CHARA_STATUS_MAIN(0, NOW_GROUP, OP_RELOAD, "EXPLORER", "≪外界の調査を開始します、今回の探索者を選択して下さい≫")
	L_INPUT = RESULT
	OP_RELOAD = 「ページ更新無し」「リスト更新無し」
	IF L_INPUT <= 0
		RETURN
	ENDIF
	CLEARLINE LINECOUNT
	DRAWLINE
	CALL C_PICTURE_RD(L_INPUT)
	DRAWLINE
	PRINTFORML %CALLNAME:L_INPUT%が外界の探索を開始します、よろしいですか？
	PRINTFORML 
	PRINTFORML [1] - 探索させる
	PRINTFORML [0] - やめる    [9] - 選び直す
	DO
		INPUT
		SELECTCASE RESULT
		CASE 1
		CASE 9
			RESTART
		CASE 0
			RETURN
		CASEELSE
			CONTINUE
		ENDSELECT
		BREAK
	LOOP 1
