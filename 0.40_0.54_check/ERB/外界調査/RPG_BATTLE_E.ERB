	ELSE
		SAVESTR:敵_名前 = 쇼고스 로드
		E_EB = 35
		E_T = 7
		E_W = 0
		E_W2 = 1
		Flag:敵_弱点 = 2
		Flag:敵_耐性 = 0
	ENDIF
ELSEIF Flag:調査区域 >= 3 && Flag:調査深度 > 60
	IF !RAND:3
		SAVESTR:敵_名前 = 落とし子
		E_EB = 30
		E_T = 4
		E_W = 4
		E_W2 = 2
		Flag:敵_弱点 = 0
		Flag:敵_耐性 = 4
	ELSEIF !RAND:2
		SAVESTR:敵_名前 = 깊은 것
		E_EB = 23
		E_T = 4
