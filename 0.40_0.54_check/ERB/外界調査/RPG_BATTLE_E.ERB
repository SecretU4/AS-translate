		E_EB = 500
		R_EB = 40
		E_T = 12
		E_W = 0
		E_W2 = 0
		Flag:敵_弱点 = 1
		Flag:敵_耐性 = 2
		Flag:敵_レア = 1
	ELSEIF !RAND:2
		SAVESTR:敵_名前 = 로드 비야키
		E_EB = 500
		R_EB = 40
		E_T = 12
		E_W = 1
		E_W2 = 1
		Flag:敵_弱点 = 3
