;;   ARG     カップサイズの値を表す整数
;; 戻値
;;   カップサイズの文字列 (測定不能,ＡＡ,Ａ,...,Ｚ,測定不能,)
;;
@INFO_STR_CUP(ARG)
#FUNCTIONS
#DIMS L_S
#DIM L_T

L_T = ARG

IF CFlag:L_T:カップサイズ <= 0
	L_S = 측정불가
ELSEIF CFlag:L_T:カップサイズ == 1
	L_S = ＡＡ
ELSEIF CFlag:L_T:カップサイズ >= 2 && CFlag:L_T:カップサイズ <= 27
	L_S = %UNICODE(0x0ff22 - 3 + CFlag:L_T:カップサイズ)%
ELSE
	L_S = 측정불가
ENDIF

RETURNF L_S


